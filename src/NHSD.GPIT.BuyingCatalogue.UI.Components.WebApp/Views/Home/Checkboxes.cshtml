                             label-text="With Conditional Content"
                             size="ExtraLarge">
    <p>Checkboxes can also contain conditional content. This means when you click the box, it will show a dropdown with more content inside</p>

    <nhs-fieldset-form-label asp-for="@Model"
                             label-text="This is a checkbox list with conditional content"
                             size="Medium">
        <nhs-checkbox-container>
            <nhs-checkbox asp-for="SingleCheckBoxProperty" label-text="This has another checkbox inside">
                <nhs-checkbox-container>
                    <nhs-checkbox asp-for="EmbeddedCheckBoxProperty" label-text="EmbeddedCheckbox" />
                </nhs-checkbox-container>
            </nhs-checkbox>
            <nhs-checkbox asp-for="AnotherCheckBoxProperty" label-text="This one has a Inset Text and in input inside">
                <nhs-inset-text>
                    Here is some inset text
