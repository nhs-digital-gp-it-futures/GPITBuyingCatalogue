@model NHSD.GPIT.BuyingCatalogue.UI.Components.WebApp.Models.BlankModel
@{
    ViewBag.Title = "Summary Lists";
}

<nhs-page-title title="Summary Lists"
                caption="Tag Helper"
                advice="Used for grouping different pieces of information into a single list for summarisation"
                additional-advice="This page is rendered from SummaryList.cshtml using the BlankModel." />

<nhs-summary-list>
    <nhs-summary-list-row label-text="This is a Summary Row Label">
        <p>and here is a bit of custom text inside the summary list</p>
        <p>with a paragraph per row</p>
    </nhs-summary-list-row>
    <nhs-summary-list-row label-text="And another row">
        <nhs-inset-text>
            that contains another component
        </nhs-inset-text>
    </nhs-summary-list-row>
    <nhs-summary-list-row label-text="and a row with input">
        <nhs-input asp-for="ARandomField" label-text="a test" />
    </nhs-summary-list-row>
    <nhs-summary-list-row label-text="And this contains a bunch of Tags">
        <nhs-tag text="Active" />
        <nhs-tag text="Inactive" colour="Grey" />
        <nhs-tag text="Red" colour="Red" />
        <nhs-tag text="Aqua Green" colour="AquaGreen" />
        <nhs-tag text="Orange" colour="Orange" />
        <nhs-tag text="and a really long random tag in purple" colour="Purple" />
    </nhs-summary-list-row>
</nhs-summary-list>

<p>Summary List is a "Wrapper Tag" that can contain any amount of raw Html and Components split by vertical rows.</p>

