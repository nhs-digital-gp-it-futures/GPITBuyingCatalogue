                </nhs-table-cell>
                <nhs-table-cell>
                    <a href="@Url.Action(nameof(CompetitionNonPriceElementsController.EditFeatureRequirement), typeof(CompetitionNonPriceElementsController).ControllerName(), new { Model.InternalOrgId, Model.CompetitionId, requirementId = shouldRequirement.Id, Model.ReturnUrl, Model.SelectedNonPriceElements })">Edit</a>
                </nhs-table-cell>
            </nhs-table-row-container>
        }
    </nhs-table>
}
