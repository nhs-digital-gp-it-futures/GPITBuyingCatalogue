@using NHSD.GPIT.BuyingCatalogue.EntityFramework.Extensions
@using NHSD.GPIT.BuyingCatalogue.UI.Components.Views.Shared.TagHelpers.Table
@model ResultsOrderingInformation

<div class="nhsuk-grid-column-three-quarters">
    <h2>Download your results</h2>

    <p>Download the results of your competition as evidence of how you arrived at your winning solution.</p>

    <vc:nhs-secondary-button text="Download results (PDF)"
                                url="@Model.PdfUrl"
                                type="Secondary" />

    @if (!Model.IsDirectAward)
    {
        @if (Model.HasMultipleWinners)
        {
            <h2>Winning solution</h2>
            <p>As your competition produced more than 1 solution with a winning score, you can choose to procure any of the winning solutions.</p>

            <vc:nhs-secondary-button text="Select a winning solution"
                             url="@Url.Action(nameof(CompetitionResultsController.SelectWinningSolution), typeof(CompetitionResultsController).ControllerName(), new { Model.InternalOrgId, Model.CompetitionId })"
                             type="Primary" />
        }
        else
        {
            <h2>Ordering information</h2>
            <p>Download the information youâ€™ll need to create an order for this solution. It includes the Service Recipients you added and any services you may also need to order.</p>

            <vc:nhs-secondary-button text="View ordering information"
                             url="#"
                             type="Primary" />
        }

    }
    else
    {
        <h2>Ordering information</h2>
        <p>As you only have one result, you can procure this solution using a direct award.</p>
    }

</div>
