@model NHSD.GPIT.BuyingCatalogue.WebApp.Models.NavBaseModel
@{
    Layout = "Layouts/_AllBannersLayout";
    ViewBag.Title = "Request submitted";
}

<div data-test-id="registration-confirmation-page">
    <partial name="Partials/_BackLink" model="@Model" />
    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
            <nhs-page-title title="@ViewBag.Title"
                            advice="Your request has been sent to the Buying Catalogue Team." />
            <div data-test-id="registration-confirmation-details">
                <h3>What next?</h3>
                <p>
                    Once we've set up your account, you'll be sent a link to the email address you provide so you can create a password. Remember to check your 'Junk' or 'Spam' folder.
                </p>
                <p>
                    The link can be used only once to set up one account, and will be valid for 24 hours from the time you receive the email.
                </p>
                <p>
                    The Buying Catalogue Team aims to respond to account requests within 5 working days.
                </p>
            </div>
        </div>
    </div>
</div>
