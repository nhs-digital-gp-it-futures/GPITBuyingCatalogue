@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Identity.Models.ResetPasswordViewModel
@{
    ViewData["PageTitle"] = "Choose your password";
    ViewData["PageDescription"] = "Please read the password policy before proceeding.";
}

<div data-test-id="reset-password-page">
    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
            <div data-test-id="error-summary" nhs-validation-summary title="There is a problem"></div>
            <h1 data-test-id="page-title" class="nhsuk-heading-xl nhsuk-u-margin-bottom-2">@ViewData["PageTitle"]</h1>
            <h2 data-test-id="page-description" class="nhsuk-heading-s nhsuk-u-margin-bottom-5">@ViewData["PageDescription"]</h2>

            <div data-test-id="reset-password-page-information">
                <p>
                    Your password must be at least ten characters in length and match on confirmation.
                </p>
                <p>
                    It must contain at least 3 of the following 4 character types:
                </p>
                <ul>
                    <li>lower case letters (a-z)</li>
                    <li>upper case letters (A-Z)</li>
                    <li>numbers (0-9)</li>
                    <li>special characters (e.g. !@@#$%^&*)</li>
                </ul>
            </div>

            <form data-test-id="input-form" asp-controller="Account" asp-action="ResetPassword" novalidate method="post">

                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />

                <div class="nhsuk-form-group">
                    <label class="nhsuk-label" asp-for="Password">
                        Enter a password
                    </label>
                    <span id="error-message-email" asp-validation-for="Password" class="nhsuk-error-message"></span>
                    <input class="nhsuk-input" asp-for="Password">
                </div>

                <div class="nhsuk-form-group">
                    <label class="nhsuk-label" asp-for="ConfirmPassword">
                        Confirm password
                    </label>
                    <span id="error-message-email" asp-validation-for="ConfirmPassword" class="nhsuk-error-message"></span>
                    <input class="nhsuk-input" asp-for="ConfirmPassword">
                </div>

                <button class="nhsuk-button nhsuk-u-margin-top-5 nhsuk-u-margin-bottom-3" type="submit" data-test-id="reset-password-button">
                    Save password
                </button>
            </form>
        </div>
    </div>
</div>
