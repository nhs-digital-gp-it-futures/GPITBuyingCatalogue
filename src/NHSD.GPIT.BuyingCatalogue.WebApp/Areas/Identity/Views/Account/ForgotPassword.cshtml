@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Identity.Models.ForgotPasswordViewModel
@{
    ViewData["PageTitle"] = "Enter your email address";
    ViewData["PageDescription"] = "You'll be sent a link to the address you provide so you can choose a password.";
}

<div data-test-id="login-page">
    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
            <div class="nhsuk-back-link">
                <a nhs-back-link href="~/identity/account/login" data-test-id="go-back-link" class="nhsuk-back-link__link">Back to log in<svg aria-hidden="true" class="nhsuk-icon__chevron-left nhsuk-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M8.5 12c0-.3.1-.5.3-.7l5-5c.4-.4 1-.4 1.4 0s.4 1 0 1.4L10.9 12l4.3 4.3c.4.4.4 1 0 1.4s-1 .4-1.4 0l-5-5c-.2-.2-.3-.4-.3-.7z"></path></svg></a>
            </div>
            <h1 data-test-id="page-title" class="nhsuk-heading-xl nhsuk-u-margin-bottom-2">@ViewData["PageTitle"]</h1>
            <h2 data-test-id="page-description" class="nhsuk-heading-s nhsuk-u-margin-bottom-5">@ViewData["PageDescription"]</h2>
        </div>
    </div>
    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
            <div data-test-id="error-summary" nhs-validation-summary title="There is a problem"></div>
            <form data-test-id="input-form" asp-controller="Account" asp-action="ForgotPassword" novalidate method="post" class="nhsuk-form-group">
                
                <div class="nhsuk-form-group">
                    <label class="nhsuk-label" asp-for="EmailAddress">
                        Email
                    </label>
                    <span id="error-message-email" asp-validation-for="EmailAddress" class="nhsuk-error-message"></span>
                    <input class="nhsuk-input" asp-for="EmailAddress" type="text">
                </div>

                <button class="nhsuk-button nhsuk-u-margin-top-5 nhsuk-u-margin-bottom-3" type="submit" data-test-id="submit-button">
                    Submit
                </button>
            </form>
        </div>
    </div>
</div>
