@using NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Identity.Controllers
@using NHSD.GPIT.BuyingCatalogue.Framework.Extensions
@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Identity.Models.UpdatePasswordViewModel
@{
    ViewBag.Title = "Update password";
    var advice = "You need to update your password to help keep your account secure. Please read the password policy before proceeding.";
}

<div data-test-id="update-password-page">
    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
            <nhs-validation-summary />
            <nhs-page-title title="@ViewBag.Title" advice="@advice" />
            <form data-test-id="input-form" novalidate method="post"
                  asp-controller="@typeof(AccountController).ControllerName()"
                  asp-action="@nameof(AccountController.UpdatePassword)">

                <nhs-input asp-for="CurrentPassword"
                           label-text="Enter your current password" />
                <nhs-input asp-for="NewPassword"
                           label-text="Enter your new password">
                    <label-hint>
                        <partial name="_PasswordPolicy" model="false" />
                    </label-hint>
                </nhs-input>
                <nhs-input asp-for="ConfirmPassword"
                           label-text="Confirm your new password" />

                <nhs-submit-button text="Save password" />
            </form>
        </div>
    </div>
</div>
