@using NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Orders.Controllers
@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Orders.Models.Supplier.NoAvailableSuppliersModel;
@{
    // TODO: Should set ViewData["Title"] or ViewBag.Title
}

<div data-test-id="supplier-page">
    <partial name="Partials/_BackLink" model="Model" />

    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
            <nhs-page-title title="Cannot progress with order"
                            advice="There are currently no suppliers on the Buying Catalogue that support this type of order: @Model.OrderTypeText" />

            <p>You should return to your order tasklist and delete this order.</p>
            <vc:nhs-secondary-button text="Return to order tasklist"
                                     type="Primary"
                                     url="@Model.BackLink" />
        </div>
    </div>
</div>
