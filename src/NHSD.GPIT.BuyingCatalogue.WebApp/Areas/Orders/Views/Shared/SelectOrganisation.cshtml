@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Orders.Models.Shared.SelectOrganisationModel;
@{
    ViewBag.Title = Model.Title;
}

<div data-test-id="organisation-select-page">
    <partial name="Partials/_BackLink" model="Model" />
    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
            <nhs-validation-summary RadioId="SelectedOrganisation" />
            <nhs-page-title title="@ViewBag.Title"
                            advice="Select the organisation you want to act on behalf of." />
        </div>
        <div class="nhsuk-grid-column-full">
            <form method="post">
                <input type="hidden" asp-for="@Model.BackLink" />
                <input type="hidden" asp-for="@Model.BackLinkText" />
                <input type="hidden" asp-for="@Model.InternalOrgId" />
                <input type="hidden" asp-for="@Model.Title" />
                <nhs-fieldset-form-label asp-for="@Model">
                    <nhs-radio-buttons
                        asp-for="SelectedOrganisation"
                        values="@Model.AvailableOrganisations"
                        value-name="InternalIdentifier"
                        display-name="Name" />
                </nhs-fieldset-form-label>
                <nhs-submit-button text="Continue" />
            </form>
        </div>
    </div>
</div>
