@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Models.OrderTriage.OrderTriageModel
@{
    ViewBag.Title = "What is the approximate value of the order you want to place?";
}

<div>
    <partial name="Partials/_BackLink" model="Model" />
    <div class="nhsuk-grid-row nhsuk-u-margin-bottom-6">
        <div class="nhsuk-grid-column-full">
            <nhs-validation-summary RadioId="@nameof(Model.SelectedTriageOption)"/>
            <nhs-page-title title="@ViewBag.Title"
                            advice="The value of your order determines which procurement procedure you should have already executed."
                            caption="@Model.OrganisationName" />

            <form method="post">
                <input type="hidden" asp-for="BackLink" />
                <input type="hidden" asp-for="BackLinkText" />
                <input type="hidden" asp-for="OrganisationName" />
                <nhs-fieldset-form-label asp-for="@Model">
                    <nhs-radio-buttons asp-for="SelectedTriageOption"
                                       values="Model.TriageOptions.Cast<object>()"
                                       value-name="Value"
                                       display-name="Text" />
                </nhs-fieldset-form-label>

                <nhs-submit-button text="Continue" />
            </form>
        </div>
    </div>
</div>
