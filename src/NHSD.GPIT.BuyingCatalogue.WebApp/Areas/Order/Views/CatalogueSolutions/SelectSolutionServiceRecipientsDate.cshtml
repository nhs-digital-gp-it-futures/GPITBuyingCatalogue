@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Models.CatalogueSolutions.SelectSolutionServiceRecipientsDateModel;
@{
    ViewData["Title"] = Model.Title;
}

<div class="nhsuk-width-container" data-test-id="planned-delivery-date-page">
    <partial name="Partials/_BackLink" model="Model" />
    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
            <nhs-page-title title="@Model.Title" advice="The date entered will be applied to all the organisations you’ll be ordering for. We’ve included the commencement date for this Call-off Agreement, but if your planned delivery date is different, you can change it here." />
            <div data-test-id="planned-delivery-date-page-inset-advice">
                <div class="nhsuk-inset-text">
                    <span class="nhsuk-u-visually-hidden">Information: </span>
                    You'll be able to alter the planned delivery date for individual organisations later if required.
                </div>
            </div>
        </div>
        <div class="nhsuk-grid-column-full">
            <form method="post">
                <input type="hidden" asp-for="@Model.BackLink" />
                <input type="hidden" asp-for="@Model.BackLinkText" />
                <input type="hidden" asp-for="@Model.OdsCode" />
                <input type="hidden" asp-for="@Model.Title" />
                <input type="hidden" asp-for="@Model.CommencementDate" />
                <div class="nhsuk-u-margin-bottom-5">
                    <div data-test-id="question-deliveryDate">
                        <div data-test-id="date-field-input">
                            <div class="nhsuk-form-group nhsuk-u-margin-bottom-2">
                                <fieldset class="nhsuk-fieldset" aria-describedby="deliveryDate-hint" role="group">
                                    <legend class="nhsuk-fieldset__legend nhsuk-u-font-size-24 nhsuk-u-font-weight-bold nhsuk-u-margin-bottom-2">
                                        Planned delivery date
                                    </legend>
                                    <div class="nhsuk-hint nhsuk-u-margin-bottom-3" id="deliveryDate-hint">
                                        For example 14 01 2020
                                    </div>
                                    <div class="nhsuk-date-input" id="deliveryDate">
                                        <div class="nhsuk-date-input__item">
                                            <div class="nhsuk-form-group">
                                                <label class="nhsuk-label nhsuk-date-input__label" asp-for="@Model.Day">
                                                    Day
                                                </label>
                                                <input class="nhsuk-input nhsuk-date-input__input nhsuk-input--width-2" asp-for="@Model.Day" type="text" pattern="[0-9]*" inputmode="numeric">
                                            </div>
                                        </div>
                                        <div class="nhsuk-date-input__item">
                                            <div class="nhsuk-form-group">
                                                <label class="nhsuk-label nhsuk-date-input__label" asp-for="@Model.Month">
                                                    Month
                                                </label>
                                                <input class="nhsuk-input nhsuk-date-input__input nhsuk-input--width-2" asp-for="@Model.Month" type="text" pattern="[0-9]*" inputmode="numeric">
                                            </div>
                                        </div>
                                        <div class="nhsuk-date-input__item">
                                            <div class="nhsuk-form-group">
                                                <label class="nhsuk-label nhsuk-date-input__label" asp-for="@Model.Year">
                                                    Year
                                                </label>
                                                <input class="nhsuk-input nhsuk-date-input__input nhsuk-input--width-4" asp-for="@Model.Year" type="text" pattern="[0-9]*" inputmode="numeric">
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                        <div data-test-id="date-field-footer">
                            <span class="nhsuk-label bc-t-font-color--grey-1 nhsuk-u-font-size-16">
                            </span>
                        </div>
                    </div>
                    <div data-test-id="view-section-planned-delivery-date-id" class="">
                        <details class="nhsuk-details">
                            <summary class="nhsuk-details__summary">
                                <span class="nhsuk-details__summary-text">
                                    What date should I enter?
                                </span>
                            </summary>
                            <div class="nhsuk-details__text">
                                Enter the planned delivery date you've agreed with the supplier. This is the day that each of the listed Service Recipients will start using this Catalogue Solution.<br><br>We've included the commencement date for this Call-off Agreement, but you can change it if you’ve agreed a different delivery date.
                            </div>
                        </details>
                    </div>
                </div>
                <div data-test-id="continue-button">
                    <button class="nhsuk-button nhsuk-u-margin-top-9" type="submit">
                        Continue
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
