@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Models.SelectSolutionServiceRecipientsDateModel;
@{
    ViewData["Title"] = $"Planned delivery date of Anywhere Consult for C0100005";
}

<div class="nhsuk-width-container" data-test-id="planned-delivery-date-page">
    <div data-test-id="go-back-link">
        <div class="nhsuk-back-link">
            <a class="nhsuk-back-link__link" href="/order/organisation/03F/order/C010001-01/catalogue-solutions/select/solution/price/recipients">
                <svg class="nhsuk-icon nhsuk-icon__chevron-left" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M8.5 12c0-.3.1-.5.3-.7l5-5c.4-.4 1-.4 1.4 0s.4 1 0 1.4L10.9 12l4.3 4.3c.4.4.4 1 0 1.4s-1 .4-1.4 0l-5-5c-.2-.2-.3-.4-.3-.7z"></path>
                </svg>
                Go back
            </a>
        </div>
    </div>
    <div class="nhsuk-grid-row">

        <div class="nhsuk-grid-column-two-thirds">

            <h1 data-test-id="planned-delivery-date-page-title" class="nhsuk-u-margin-top-7 nhsuk-u-margin-bottom-3">Planned delivery date of Anywhere Consult for C010001-01</h1>
            <p data-test-id="planned-delivery-date-page-description" class="nhsuk-heading-l nhsuk-u-font-size-24 nhsuk-u-margin-bottom-7">The date entered will be applied to all the organisations you’ll be ordering for. We’ve included the commencement date for this Call-off Agreement, but if your planned delivery date is different, you can change it here.</p>
            <div data-test-id="planned-delivery-date-page-inset-advice">
                <div class="nhsuk-inset-text">
                    <span class="nhsuk-u-visually-hidden">Information: </span>
                    You'll be able to alter the planned delivery date for individual organisations later if required.
                </div>
            </div>
        </div>

        <div class="nhsuk-grid-column-full">
            <form method="post">

                <div class="nhsuk-u-margin-bottom-5">

                    <div data-test-id="question-deliveryDate">

                        <div data-test-id="date-field-input">

                            <div class="nhsuk-form-group nhsuk-u-margin-bottom-2">
                                <fieldset class="nhsuk-fieldset" aria-describedby="deliveryDate-hint" role="group">
                                    <legend class="nhsuk-fieldset__legend nhsuk-u-font-size-24 nhsuk-u-font-weight-bold nhsuk-u-margin-bottom-2">
                                        Planned delivery date
                                    </legend>
                                    <div class="nhsuk-hint nhsuk-u-margin-bottom-3" id="deliveryDate-hint">
                                        For example 14 01 2020
                                    </div>

                                    <div class="nhsuk-date-input" id="deliveryDate">
                                        <div class="nhsuk-date-input__item">
                                            <div class="nhsuk-form-group">
                                                <label class="nhsuk-label nhsuk-date-input__label" for="deliveryDate-day">
                                                    Day
                                                </label>
                                                <input class="nhsuk-input nhsuk-date-input__input nhsuk-input--width-2" id="deliveryDate-day" name="deliveryDate-day" type="text" value="01" pattern="[0-9]*" inputmode="numeric">
                                            </div>
                                        </div>
                                        <div class="nhsuk-date-input__item">
                                            <div class="nhsuk-form-group">
                                                <label class="nhsuk-label nhsuk-date-input__label" for="deliveryDate-month">
                                                    Month
                                                </label>
                                                <input class="nhsuk-input nhsuk-date-input__input nhsuk-input--width-2" id="deliveryDate-month" name="deliveryDate-month" type="text" value="02" pattern="[0-9]*" inputmode="numeric">
                                            </div>
                                        </div>
                                        <div class="nhsuk-date-input__item">
                                            <div class="nhsuk-form-group">
                                                <label class="nhsuk-label nhsuk-date-input__label" for="deliveryDate-year">
                                                    Year
                                                </label>
                                                <input class="nhsuk-input nhsuk-date-input__input nhsuk-input--width-4" id="deliveryDate-year" name="deliveryDate-year" type="text" value="2022" pattern="[0-9]*" inputmode="numeric">
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>

                        <div data-test-id="date-field-footer">
                            <span class="nhsuk-label bc-t-font-color--grey-1 nhsuk-u-font-size-16">
                            </span>
                        </div>
                    </div>

                    <div data-test-id="view-section-planned-delivery-date-id" class="">
                        <details class="nhsuk-details">
                            <summary class="nhsuk-details__summary">
                                <span class="nhsuk-details__summary-text">
                                    What date should I enter?
                                </span>
                            </summary>
                            <div class="nhsuk-details__text">
                                Enter the planned delivery date you've agreed with the supplier. This is the day that each of the listed Service Recipients will start using this Catalogue Solution.<br><br>We've included the commencement date for this Call-off Agreement, but you can change it if you’ve agreed a different delivery date.
                            </div>
                        </details>
                    </div>
                </div>

                <div data-test-id="continue-button">

                    <button class="nhsuk-button nhsuk-u-margin-top-9" type="submit">
                        Continue
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
