@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Models.CatalogueSolutions.SelectFlatDeclarativeQuantityModel;
@{
    ViewData["Title"] = Model.Title;
}

<div class="nhsuk-width-container" data-test-id="order-item-provisiontype-page">
    <partial name="Partials/_BackLink" model="Model" />

    <div class="nhsuk-grid-row">
        <div>
            <nhs-page-title title="@Model.Title" title-advice="Enter the total amount you think you&#39;ll need." />            
        </div>

        <form method="post">
            <div>

                <div class="nhsuk-u-margin-bottom-5">
                    <div class="nhsuk-u-margin-bottom-6">

                        <div data-test-id="question-quantity">

                            <div data-test-id="text-field-input">

                                <div class="nhsuk-form-group nhsuk-u-margin-bottom-2">
                                    <label class="nhsuk-label nhsuk-u-font-size-24 nhsuk-u-font-weight-bold nhsuk-u-margin-bottom-2" for="quantity">
                                        How many do you need?
                                    </label>
                                    <input class="nhsuk-input nhsuk-input--width-10" id="quantity" name="quantity" type="text" value="7">
                                </div>
                            </div>

                            <div data-test-id="text-field-footer">
                                <span class="nhsuk-label bc-t-font-color--grey-1 nhsuk-u-font-size-16">
                                </span>
                            </div>
                        </div>

                        <div data-test-id="view-section-quantity-id" class="">
                            <details class="nhsuk-details">
                                <summary class="nhsuk-details__summary">
                                    <span class="nhsuk-details__summary-text">
                                        What quantity should I enter?
                                    </span>
                                </summary>
                                <div class="nhsuk-details__text">
                                    Enter the total amount you think you'll need for the entire duration of the order.
                                </div>
                            </details>
                        </div>
                    </div>

                    <div data-test-id="continue-button">

                        <button class="nhsuk-button nhsuk-u-margin-top-9" type="submit">
                            Continue
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
