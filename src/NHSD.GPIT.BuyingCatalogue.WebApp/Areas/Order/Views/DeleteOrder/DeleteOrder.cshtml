@using NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Controllers;
@using NHSD.GPIT.BuyingCatalogue.Framework.Extensions;
@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Models.DeleteOrder.DeleteOrderModel;
@{
    ViewBag.Title = "Are you sure you want to delete this order?";
}

<div data-test-id="delete-order-page">
    <partial name="Partials/_BackLink" model="Model" />
    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
            <nhs-validation-summary RadioId="@nameof(Model.SelectedOption)" />
            <nhs-page-title title="@ViewBag.Title"
                            caption="Order @Model.CallOffId"
                            advice="The order will be permanently deleted from your organisation’s dashboard. " />
            <nhs-warning-callout label-text="Deleting an order" data-test-id="delete-warning-callout">
                <p>Deleting an order is permanent and any information you’ve already inputted will be lost. Once you’ve deleted your order, you’ll not be able to retrieve it and will have to start a new one.</p>
            </nhs-warning-callout>

            <form method="post">
                <nhs-fieldset-form-label asp-for="SelectedOption">
                    <nhs-radio-button-container>
                        <nhs-radio-button asp-for="SelectedOption"
                                          value="@Model.AvailableOptions[0]"
                                          value-name="Value"
                                          display-name="Name"
                                          index="0" />
                        <nhs-radio-button asp-for="SelectedOption"
                                          value="@Model.AvailableOptions[1]"
                                          value-name="Value"
                                          display-name="Name"
                                          index="1" />
                    </nhs-radio-button-container>
                </nhs-fieldset-form-label>

                <nhs-submit-button />
            </form>
        </div>
    </div>
</div>
