@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Models.DeleteOrder.DeleteOrderModel;
@{
    ViewData["Title"] = Model.Title;
}

<div data-test-id="delete-order-page">
    <partial name="Partials/_BackLink" model="Model" />
    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
            <nhs-page-title title="@Model.Title" advice="Confirm you want to delete this order." />
            <h2 data-test-id="order-description-title">Order description</h2>
            <p data-test-id="order-description">@Model.Description</p>
            <form method="post">
                <input type="hidden" asp-for="@Model.BackLink" />
                <input type="hidden" asp-for="@Model.BackLinkText" />
                <input type="hidden" asp-for="@Model.OdsCode" />
                <input type="hidden" asp-for="@Model.Title" />
                <div class="bc-u-inline-block">
                    <div data-test-id="no-button">
                        <vc:nhs-secondary-button url="@Model.BackLink" text="Cancel delete" use-primary-colour="true" />
                    </div>
                </div>
                <div class="bc-u-inline-block">
                    <div data-test-id="yes-button">
                        <nhs-submit-button text="Confirm delete" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
