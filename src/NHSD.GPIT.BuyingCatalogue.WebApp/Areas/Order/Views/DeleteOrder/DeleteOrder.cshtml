@using NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Controllers;
@using NHSD.GPIT.BuyingCatalogue.Framework.Extensions;
@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Models.DeleteOrder.DeleteOrderModel;
@{
    ViewBag.Title = Model.Title;
}

<div data-test-id="delete-order-page">
    <partial name="Partials/_BackLink" model="Model" />
    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
            <nhs-page-title title="@ViewBag.Title"
                            advice="Confirm you want to delete this order." />
            <h2 data-test-id="order-description-title">Order description</h2>
            <p data-test-id="order-description">@Model.Description</p>
            <form method="post">
                <input type="hidden" asp-for="@Model.BackLink" />
                <input type="hidden" asp-for="@Model.BackLinkText" />
                <input type="hidden" asp-for="@Model.InternalOrgId" />
                <input type="hidden" asp-for="@Model.Title" />
                <div data-test-id="yes-button">
                    <nhs-submit-button text="Confirm delete" />
                </div>
                <div>
                    <a asp-controller="@typeof(OrderController).ControllerName()"
                       asp-action="@nameof(OrderController.Order)"
                       asp-route-internalOrgId="@Model.InternalOrgId"
                       asp-route-callOffId="@Model.CallOffId">
                        Cancel delete
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
