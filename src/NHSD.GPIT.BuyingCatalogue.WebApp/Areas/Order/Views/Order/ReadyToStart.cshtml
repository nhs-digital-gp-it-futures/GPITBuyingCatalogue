@using NHSD.GPIT.BuyingCatalogue.Framework.Extensions
@using NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Controllers
@using NHSD.GPIT.BuyingCatalogue.WebApp.Controllers
@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Models.Order.ReadyToStartModel
@{
    ViewBag.Title = "Before you start an order";
}

<div>
    <partial name="Partials/_BackLink" model="Model" />
    <div class="nhsuk-grid-row nhsuk-u-margin-bottom-6">
        <div class="nhsuk-grid-column-full">
            <nhs-validation-summary />
            <nhs-page-title title="@ViewBag.Title"
                            advice="Based on the answers given, you’re ready to start your order. You should also know:" />
            <ul>
                <li>how you’re going to pay for your order</li>
                <li>which practices will be receiving the Catalogue Solutions and services being ordered</li>
                <li>the dates you want the Catalogue Solutions and services delivered to your practices</li>
                <li>the patient list sizes for the practices you’re ordering for</li>
                <li>contact details for the supplier of the Catalogue Solution and any services you’re ordering</li>
                <li>if any price has been agreed with the supplier other than the list price</li>
            </ul>

            <p>
                For help using the Buying Catalogue, contact the
                <a id="procurement-hub-link"
                   href="@Url.Action(
                             nameof(ProcurementHubController.Index),
                             typeof(ProcurementHubController).ControllerName(),
                             new { returnUrl = Url.Action(
                                 nameof(OrderController.ReadyToStart),
                                 typeof(OrderController).ControllerName(),
                                 new { Model!.InternalOrgId, Model.Option }),
                             })">National Commercial and Procurement Hub</a>.
            </p>

            <form method="post">
                <input type="hidden" asp-for="BackLink" />
                <input type="hidden" asp-for="BackLinkText" />
                <nhs-submit-button text="Start order" />
            </form>
        </div>
    </div>
</div>
