@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Models.Order.FundingSourceModel;
@{
    ViewData["Title"] = Model.Title;
}

<div class="nhsuk-width-container" data-test-id="funding-source-page">
    <partial name="Partials/_BackLink" model="Model" />
    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
            <nhs-validation-summary />
            <nhs-page-title title="@Model.Title" title-advice="Explain how you’re paying for this order" />
            <form method="post">
                <input type="hidden" asp-for="@Model.BackLink" />
                <input type="hidden" asp-for="@Model.BackLinkText" />
                <input type="hidden" asp-for="@Model.OdsCode" />
                <input type="hidden" asp-for="@Model.Title" />                
                <div id="selectFundingSource" data-test-id="question-selectFundingSource">
                    <div data-test-id="radiobutton-options">
                        <div class="nhsuk-form-group">                            
                            <nhs-fieldset-form asp-for="@Model"
                                               label-text="Are you paying for this order in full using your GP IT Futures centrally held funding allocation?">
                                <nhs-yesno-radio-buttons asp-for="@Model.FundingSourceOnlyGms" />
                            </nhs-fieldset-form>                           
                        </div>
                    </div>
                </div>
                <div data-test-id="funding-source-page-insetAdvice" class="nhsuk-inset-text nhsuk-u-padding-top-2 nhsuk-u-padding-right-4 nhsuk-u-padding-bottom-2 nhsuk-u-padding-left-4 nhsuk-u-margin-top-5 nhsuk-u-margin-bottom-6">
                    <p>
                        Only answer ‘Yes’ if you’re using your central funding allocation to pay for the entire value of this order. It’ll then be centrally processed and paid for out of your allocation.
                    </p>

                    <p>
                        If you answer ‘No’, the order can still be completed but you’ll need to contact the supplier to arrange payment.
                    </p>

                    <p>
                        In both cases completing your order will generate an order summary that you’ll need to include in the contract you send to the supplier.
                    </p>

                    <p>
                        If you’re intending to pay using a combination of your central allocation and any other funding sources, you’ll need to create separate orders for each of the funding sources you’re using.
                    </p>
                </div>
                <div data-test-id="save-button">
                    <button class="nhsuk-button nhsuk-u-margin-top-9" type="submit">
                        Save and return
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
