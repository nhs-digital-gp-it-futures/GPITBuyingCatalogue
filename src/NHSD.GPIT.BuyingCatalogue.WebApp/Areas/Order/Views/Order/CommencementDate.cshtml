@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Models.Order.CommencementDateModel;
@{
    ViewData["Title"] = Model.Title;
}

<div class="nhsuk-width-container" data-test-id="commencement-date-page">
    <partial name="Partials/_BackLink" model="Model" />
    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">

            <nhs-page-title title="@Model.Title" title-advice="Enter the date that this Call-off Agreement will begin." />

            <form method="post">
                <div class="nhsuk-u-margin-bottom-5">

                    <div data-test-id="question-commencementDate">

                        <div data-test-id="date-field-input">

                            <div class="nhsuk-form-group nhsuk-u-margin-bottom-2">
                                <fieldset class="nhsuk-fieldset" aria-describedby="commencementDate-hint" role="group">
                                    <legend class="nhsuk-fieldset__legend nhsuk-u-font-size-24 nhsuk-u-font-weight-bold nhsuk-u-margin-bottom-2">
                                        Commencement date
                                    </legend>
                                    <div class="nhsuk-hint nhsuk-u-margin-bottom-3" id="commencementDate-hint">
                                        For example 14 01 2020
                                    </div>

                                    <div class="nhsuk-date-input" id="commencementDate">
                                        <div class="nhsuk-date-input__item">
                                            <div class="nhsuk-form-group">
                                                <label class="nhsuk-label nhsuk-date-input__label" for="commencementDate-day">
                                                    Day
                                                </label>
                                                <input class="nhsuk-input nhsuk-date-input__input nhsuk-input--width-2" id="commencementDate-day" name="commencementDate-day" type="text" value="01" pattern="[0-9]*" inputmode="numeric">
                                            </div>
                                        </div>
                                        <div class="nhsuk-date-input__item">
                                            <div class="nhsuk-form-group">
                                                <label class="nhsuk-label nhsuk-date-input__label" for="commencementDate-month">
                                                    Month
                                                </label>
                                                <input class="nhsuk-input nhsuk-date-input__input nhsuk-input--width-2" id="commencementDate-month" name="commencementDate-month" type="text" value="02" pattern="[0-9]*" inputmode="numeric">
                                            </div>
                                        </div>
                                        <div class="nhsuk-date-input__item">
                                            <div class="nhsuk-form-group">
                                                <label class="nhsuk-label nhsuk-date-input__label" for="commencementDate-year">
                                                    Year
                                                </label>
                                                <input class="nhsuk-input nhsuk-date-input__input nhsuk-input--width-4" id="commencementDate-year" name="commencementDate-year" type="text" value="2022" pattern="[0-9]*" inputmode="numeric">
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>

                        <div data-test-id="date-field-footer">
                            <span class="nhsuk-label bc-t-font-color--grey-1 nhsuk-u-font-size-16">
                            </span>
                        </div>
                    </div>
                </div>

                <div data-test-id="save-button">

                    <button class="nhsuk-button nhsuk-u-margin-top-9" type="submit">
                        Save and return
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
