@using NHSD.GPIT.BuyingCatalogue.Framework.Extensions
@using NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Controllers
@using NHSD.GPIT.BuyingCatalogue.WebApp.Controllers
@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Models.Order.CompletedModel;
@{
    ViewBag.Title = "Order summary completed";
}

<partial name="Partials/_BackLink" model="Model" />

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-page-title title="@ViewBag.Title"
                        caption="Order @Model.CallOffId"
                        advice="You've successfully completed your order summary. Make sure you complete the listed tasks where relevant to finalise your procurement." />

        <div class="nhsuk-inset-text">
            <span class="nhsuk-u-visually-hidden">Information: </span>
            <p>A copy of these tasks will be emailed to the address you’ve provided.</p>
        </div>

        <ul>
            <li>
                download a copy of your order summary using the button on this page
            </li>
            <li>
                download and complete the blue shaded sections of
                <a href="https://gpitbjss.atlassian.net/wiki/spaces/BG/pages/1933575165/GP+IT+Futures+Contracts" target="_blank">Schedule 2.3 (Word doc 41KB)</a>
                and sign it – this is the contractual part of your procurement. Send it to the supplier along with your order summary so they can complete their sections and sign, creating the contract
            </li>
            <li>
                return a signed copy of Schedule 2.3 to gpitf.commercial1@nhs.net, gpitfutures.finance@nhs.net and commercial.procurementhub@nhs.net
            </li>
            <li>
                if you’ve paid using your central allocation, we’ll process the payments for you
            </li>
            <li>
                if you’ve paid using local funding, you’ll need to contact the supplier to arrange payment
            </li>
            <li>
                if you’ve ordered a migration, you can find more information on
                <a href="https://digital.nhs.uk/services/gp-it-futures-systems/clinical-system-migration-guide" target="_blank">preparing and planning (opens in a new tab)</a>
            </li>
            <li>
                once solutions and services are in use, enter the activation dates on the order tracker so we can start paying for centrally funded orders
            </li>
            <li>
                once Associated Services, such as training, migration or practice mergers and splits have been provided, inform gpitfutures.finance@nhs.net so we can start paying the supplier
            </li>
        </ul>

        <div>
            <vc:nhs-secondary-button text="Download order summary PDF"
                                     use-primary-colour="false"
                                     url="@Url.Action(
                                              nameof(OrderController.Download),
                                              typeof(OrderController).ControllerName(),
                                              new { Model!.InternalOrgId, Model.CallOffId })" />
        </div>

        <vc:nhs-secondary-button text="Return to orders dashboard"
                                 use-primary-colour="true"
                                 url="@Model.BackLink" />

        <h3>Need help?</h3>
        <p>If you need any help or have any queries, you can contact the National and Commercial Procurement Hub:</p>

        <vc:nhs-action-link text="Get procurement support"
                            url="@Url.Action(
                                     nameof(ProcurementHubController.Index),
                                     typeof(ProcurementHubController).ControllerName(),
                                     new { returnUrl = Url.Action(
                                         nameof(DashboardController.Organisation),
                                         typeof(DashboardController).ControllerName(),
                                         new { Model.InternalOrgId }) })" />
    </div>
</div>
