@using NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Controllers
@using NHSD.GPIT.BuyingCatalogue.Framework.Extensions
@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Models.Order.CompletedOrderConfirmationModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="nhsuk-width-container">
    <partial name="Partials/_BackLink" model="Model" />
    <div class="nhsuk-grid-row nhsuk-u-margin-bottom-6">
        <div class="nhsuk-grid-column-full">
            <nhs-validation-summary />
            <nhs-page-title title="@Model.Title"
                            advice="You've successfully completed your order and payment will be centrally processed. You’ll need to include your order summary in the contract you send to the supplier." />
            <vc:nhs-secondary-button text="Get order summary"
                                     use-primary-colour="false"
                                     url="@Url.Action(
                                         nameof(OrderController.Summary),
                                         typeof(OrderController).ControllerName(),
                                         new { Model.OdsCode, Model.CallOffId })" />

            <p>
                By using this button you can view your order summary. 
                You'll be given the option to print a copy or create a PDF version that can be included in your contract. 
            </p>
            <p>
                You can get a copy of your order summary at any time by using the relevant link in your organisation's completed orders section.
            </p>
        </div>
    </div>
</div>

