@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Models.Supplier.NewContactModel;
@{
    ViewBag.Title = Model!.Title;
}

<div>
    <partial name="Partials/_BackLink" model="Model" />

    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
            <nhs-validation-summary />
            <nhs-page-title title="@ViewBag.Title" 
                            caption="Order @Model.CallOffId"
                            advice="Provide details for this contact for @(Model.SupplierName)." />

            <div class="nhsuk-inset-text">
                <span class="nhsuk-u-visually-hidden">Information: </span>
                <p>Any new contacts you add will only be available for this order.</p>
            </div>

            <form method="post">
                <input type="hidden" asp-for="BackLink" />
                <input type="hidden" asp-for="Title" />
                <input type="hidden" asp-for="SupplierId" />
                <input type="hidden" asp-for="SupplierName" />
                
                <div class="nhsuk-u-margin-bottom-9">
                    <nhs-input asp-for="FirstName"
                               label-text="First name" />
                    <nhs-input asp-for="LastName"
                               label-text="Last name" />
                    <nhs-input asp-for="Department"
                               label-text="Department name (optional)" />
                    <nhs-input asp-for="PhoneNumber"
                               label-text="Telephone number (optional)"
                               input-width="Ten" />
                    <nhs-input asp-for="Email"
                               label-text="Email address" />
                </div>

                <div>
                    <nhs-submit-button />
                </div>
            </form>
        </div>
    </div>
</div>
