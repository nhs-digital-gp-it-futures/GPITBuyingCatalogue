@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Models.SupplierSearchModel;
@{
    ViewData["Title"] = $"Find supplier information for C010005-01";
}

<div class="nhsuk-width-container" data-test-id="supplier-search-page">
    <div data-test-id="go-back-link">
        <div class="nhsuk-back-link">
            <a class="nhsuk-back-link__link" href="/order/organisation/03F/order/C010004-01">
                <svg class="nhsuk-icon nhsuk-icon__chevron-left" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M8.5 12c0-.3.1-.5.3-.7l5-5c.4-.4 1-.4 1.4 0s.4 1 0 1.4L10.9 12l4.3 4.3c.4.4.4 1 0 1.4s-1 .4-1.4 0l-5-5c-.2-.2-.3-.4-.3-.7z"></path>
                </svg>
                Go back
            </a>
        </div>
    </div>

    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">

            <h1 data-test-id="supplier-search-page-title" class="nhsuk-u-margin-top-7 nhsuk-u-margin-bottom-3">Find supplier information for C010004-01</h1>
            <p data-test-id="supplier-search-page-description" class="nhsuk-heading-l nhsuk-u-font-size-24 nhsuk-u-margin-bottom-6">Search for the supplier you want to purchase from.</p>

            <form method="post">

                <div data-test-id="question-supplierName">

                    <div data-test-id="text-field-input">

                        <div class="nhsuk-form-group nhsuk-u-margin-bottom-2">
                            <label class="nhsuk-label nhsuk-u-font-size-24 nhsuk-u-font-weight-bold nhsuk-u-margin-bottom-2" for="supplierName">
                                Enter Supplier name
                            </label>
                            <input class="nhsuk-input" id="supplierName" name="supplierName" type="text">
                        </div>
                    </div>

                    <div data-test-id="text-field-footer">
                        <span class="nhsuk-label bc-t-font-color--grey-1 nhsuk-u-font-size-16">
                        </span>
                    </div>
                </div>

                <div data-test-id="search-button">

                    <button class="nhsuk-button nhsuk-u-margin-top-9" type="submit">
                        Search
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
