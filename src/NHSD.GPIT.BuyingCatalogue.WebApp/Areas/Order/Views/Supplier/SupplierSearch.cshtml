@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Models.Supplier.SupplierSearchModel;
@{
    ViewData["Title"] = Model.Title;
}

<div class="nhsuk-width-container" data-test-id="supplier-search-page">
    <partial name="Partials/_BackLink" model="Model" />

    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">

            <nhs-page-title title="@Model.Title" title-advice="Search for the supplier you want to purchase from." />

            <form method="post">

                <div data-test-id="question-supplierName">

                    <div data-test-id="text-field-input">

                        <div class="nhsuk-form-group nhsuk-u-margin-bottom-2">
                            <label class="nhsuk-label nhsuk-u-font-size-24 nhsuk-u-font-weight-bold nhsuk-u-margin-bottom-2" for="supplierName">
                                Enter Supplier name
                            </label>
                            <input class="nhsuk-input" id="supplierName" name="supplierName" type="text">
                        </div>
                    </div>

                    <div data-test-id="text-field-footer">
                        <span class="nhsuk-label bc-t-font-color--grey-1 nhsuk-u-font-size-16">
                        </span>
                    </div>
                </div>

                <div data-test-id="search-button">

                    <button class="nhsuk-button nhsuk-u-margin-top-9" type="submit">
                        Search
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
