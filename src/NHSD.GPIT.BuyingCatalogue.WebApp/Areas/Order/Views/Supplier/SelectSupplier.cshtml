@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Models.Supplier.SelectSupplierModel;
@{
    ViewBag.Title = "Select supplier";
}

<div data-test-id="supplier-search-page">
    <partial name="Partials/_BackLink" model="Model" />

    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
            <nhs-validation-summary/>

            <nhs-page-title title="@ViewBag.Title"
                            caption="Order @(Model.CallOffId)"
                            advice="Select the supplier you want to order from." />

            <form method="post">
                <nhs-auto-complete label-text="Supplier"
                                   asp-for="SelectedSupplierId"
                                   asp-items="@(new SelectList(Model.Suppliers, "Value", "Text"))"/>
                <br/>
                <nhs-submit-button/>
            </form>
        </div>
    </div>
</div>
