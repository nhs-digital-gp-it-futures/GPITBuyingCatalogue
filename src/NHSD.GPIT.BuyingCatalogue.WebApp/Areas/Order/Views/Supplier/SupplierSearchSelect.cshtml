@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Models.Supplier.SupplierSearchSelectModel;
@{
    ViewData["Title"] = Model.Title;
}

<div class="nhsuk-width-container" data-test-id="supplier-select-page">
    <partial name="Partials/_BackLink" model="Model" />

    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
            <form method="post">
            <nhs-page-title title="@Model.Title" title-advice="These are the suppliers that match the search terms you provided. Select the one you&#39;re looking for." />

            <nhs-fieldset-form-label asp-for="@Model"
                               label-text="Select Supplier" >
                <nhs-radio-buttons asp-for="SelectedSupplierId"
                                   values="@Model.Suppliers"
                                   value-name="Id"
                                   display-name="Name" />
            </nhs-fieldset-form-label>
            <nhs-submit-button text="Continue" />
            </form>
        </div>
    </div>
</div>
