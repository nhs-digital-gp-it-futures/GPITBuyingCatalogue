@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Marketing.Models.FeaturesModel;
@{
    ViewData["Title"] = "Native mobile or tablet application - supported operating systems";
}



<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full nhsuk-u-margin-bottom-3">
        <div data-test-id="section-back-link">
            <div class="nhsuk-back-link">
                <a class="nhsuk-back-link__link" href="../">
                    <svg class="nhsuk-icon nhsuk-icon__chevron-left" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                        <path d="M8.5 12c0-.3.1-.5.3-.7l5-5c.4-.4 1-.4 1.4 0s.4 1 0 1.4L10.9 12l4.3 4.3c.4.4.4 1 0 1.4s-1 .4-1.4 0l-5-5c-.2-.2-.3-.4-.3-.7z"></path>
                    </svg>
                    Return to all sections
                </a>
            </div>

        </div>
    </div>
    <div class="nhsuk-grid-column-two-thirds">


        <div class="nhsuk-u-margin-top-5 nhsuk-u-margin-bottom-7">
            <h1 data-test-id="section-title" class="nhsuk-u-margin-bottom-3">Native mobile or tablet application – supported operating systems</h1>
            <h2 data-test-id="section-main-advice" class="nhsuk-u-font-size-22">Let buyers know which operating systems will work with your Catalogue Solution.</h2>
            <div data-test-id="section-additional-advice">

            </div>
        </div>

        <form method="post">








            <div data-test-id="section-question-checkbox-options" class="nhsuk-u-margin-bottom-6">




















                <div id="operating-systems" data-test-id="question-operating-systems">

                    <div data-test-id="checkbox-options">











                        <div class="nhsuk-form-group">

                            <fieldset class="nhsuk-fieldset" aria-describedby="operating-systems-hint">
                                <legend class="nhsuk-fieldset__legend nhsuk-u-font-size-24 nhsuk-u-font-weight-bold nhsuk-u-margin-bottom-2">
                                    Supported operating systems
                                </legend>

                                <div class="nhsuk-hint nhsuk-u-margin-bottom-3 nhsuk-u-margin-top-0" id="operating-systems-hint">
                                    Select the operating systems supported by your Catalogue Solution.
                                </div>


                                <div class="nhsuk-checkboxes">






                                    <div class="nhsuk-checkboxes__item">
                                        <input class="nhsuk-checkboxes__input" id="operating-systems-1" name="operating-systems" type="checkbox" value="Apple IOS">
                                        <label class="nhsuk-label nhsuk-checkboxes__label" for="operating-systems-1">
                                            Apple IOS
                                        </label>
                                    </div>








                                    <div class="nhsuk-checkboxes__item">
                                        <input class="nhsuk-checkboxes__input" id="operating-systems-2" name="operating-systems" type="checkbox" value="Android">
                                        <label class="nhsuk-label nhsuk-checkboxes__label" for="operating-systems-2">
                                            Android
                                        </label>
                                    </div>








                                    <div class="nhsuk-checkboxes__item">
                                        <input class="nhsuk-checkboxes__input" id="operating-systems-3" name="operating-systems" type="checkbox" value="Other">
                                        <label class="nhsuk-label nhsuk-checkboxes__label" for="operating-systems-3">
                                            Other
                                        </label>
                                    </div>



                                </div>
                            </fieldset>


                        </div>

                    </div>

                </div>






            </div>










            <div data-test-id="section-question-textarea-field" class="nhsuk-u-margin-bottom-6">














                <div data-test-id="question-operating-systems-description">

                    <div data-test-id="textarea-field">



                        <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="1000">


                            <div class="govuk-form-group nhsuk-u-margin-bottom-2">
                                <label class="govuk-label nhsuk-u-font-size-24 nhsuk-label nhsuk-u-font-weight-bold nhsuk-u-margin-bottom-2" for="operating-systems-description">
                                    Description of supported operating systems (optional)
                                </label>



                                <div id="operating-systems-description-hint" class="govuk-hint nhsuk-hint nhsuk-u-margin-bottom-3">
                                    Provide any additional information that may be helpful to buyers, for example which version of the operating system is supported.
                                </div>


                                <textarea class="govuk-textarea govuk-js-character-count" id="operating-systems-description" name="operating-systems-description" rows="5" aria-describedby="operating-systems-description-info operating-systems-description-hint"></textarea>
                            </div>

                            <div id="operating-systems-description-info" class="govuk-hint govuk-character-count__message" aria-live="polite">
                                You can enter up to 1000 characters
                            </div>

                        </div>

                    </div>

                </div>












            </div>








            <div data-test-id="section-submit-button" class="nhsuk-u-margin-top-7">










                <button class="nhsuk-button" type="submit">
                    Save and return
                </button>



            </div>
        </form>

    </div>
</div>