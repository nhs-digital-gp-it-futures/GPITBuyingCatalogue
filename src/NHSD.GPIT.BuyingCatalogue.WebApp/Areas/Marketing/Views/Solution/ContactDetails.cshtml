@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Marketing.Models.ContactDetailsModel;
@{
    ViewData["Title"] = "Contact details";
}

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full nhsuk-u-margin-bottom-3">
        <div data-test-id="section-back-link">
