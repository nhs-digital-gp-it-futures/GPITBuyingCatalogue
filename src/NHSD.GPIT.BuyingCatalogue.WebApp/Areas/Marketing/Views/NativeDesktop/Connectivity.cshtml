@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Marketing.Models.NativeDesktop.ConnectivityModel;
@{
    ViewData["Title"] = "Native desktop application - connectivity";
}

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full nhsuk-u-margin-bottom-3">
        <partial name="_BackLink" model="Model"/>
    </div>
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-validation-summary/>
        <partial name="_NhsPageTitle" model="@Model.PageTitle()"/>
        <form method="post">
            <input type="hidden" asp-for="@Model.SolutionId"/>
            <input type="hidden" asp-for="@Model.BackLink"/>
            <nhs-validation-select asp-for="SelectedConnectionSpeed"
                                   asp-items="@(new SelectList(Model.ConnectionSpeeds, "Value", "Text"))"
                                   label-text="Connection speed"
                                   label-hint="Select the minimum bandwidth required for your Catalogue Solution to function."/>
            <nhs-submit-button/>
        </form>
    </div>
</div>