@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Marketing.Models.NativeDesktop.AdditionalInformationModel;
@{
    ViewData["Title"] = "Native desktop application - additional information";
}

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full nhsuk-u-margin-bottom-3">
        <partial name="Partials/_BackLink" model="Model" />
    </div>
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-validation-summary />
        <nhs-page-title title="Native desktop application – additional information"
                        title-advice="Let buyers know any additional information about your Catalogue Solution." />
        <form method="post">
            <input type="hidden" asp-for="@Model.SolutionId" />
            <nhs-validation-textarea asp-for="AdditionalInformation"
                                     label-text="Additional information (optional)"
                                     label-hint="Provide additional information about your native desktop Catalogue Solution." />
            <nhs-submit-button />
        </form>
    </div>
</div>