@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Marketing.Models.AboutSolution.FeaturesModel;
@{
    ViewData["Title"] = "Catalogue Solution features";
}

<partial name="Partials/_BackLink" model="Model" />
<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-validation-summary title="There is a problem" />
        <nhs-page-title title="@ViewData["Title"]" advice="Highlight to buyers the key features of your Catalogue Solution." />
        <form method="post">

            <input type="hidden" asp-for="@Model.SolutionId" />
            <input type="hidden" asp-for="@Model.BackLink" />
            <div data-test-id="section-question-bulletpoint-list" class="nhsuk-u-margin-bottom-6">
                <div data-test-id="question-listing">
                    <div data-test-id="bulletpoint-list-main-advice">
                        <span class="nhsuk-u-font-size-24 nhsuk-u-font-weight-bold bc-u-inline-block nhsuk-u-margin-bottom-2">
                            Features list (optional)
                        </span>
                    </div>
                    <span data-test-id="bulletpoint-list-additional-advice" class="nhsuk-hint nhsuk-u-margin-bottom-3">
                        List up to 10 key features provided by your Catalogue Solution that meet needs in primary care, for example how it can help manage information and resources.
                    </span>
                    <div data-test-id="bulletpoint-list-fields">
                        <nhs-input asp-for="Listing1" />
                        <nhs-input asp-for="Listing2" />
                        <nhs-input asp-for="Listing3" />
                        <nhs-input asp-for="Listing4" />
                        <nhs-input asp-for="Listing5" />
                        <nhs-input asp-for="Listing6" />
                        <nhs-input asp-for="Listing7" />
                        <nhs-input asp-for="Listing8" />
                        <nhs-input asp-for="Listing9" />
                        <nhs-input asp-for="Listing10" />
                    </div>
                </div>
            </div>
            <nhs-submit-button />
        </form>
    </div>
</div>
