@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Marketing.Models.ClientApplicationType.NativeDesktopModel;
@{
    ViewData["Title"] = "Native desktop application – all sections";
}

<partial name="Partials/_BackLink" model="Model" />
<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-page-title title="@ViewData["Title"]"
                        advice="Provide information about your native desktop Catalogue Solution." />
    </div>
    <div data-test-id="dashboard-sectionGroup-native-desktop-sections" class="nhsuk-u-padding-bottom-7 nhsuk-grid-column-full">
        <div class="bc-c-title">
            <h2>
                Native desktop information
            </h2>
            <div class="nhsuk-grid-row">
                <div class="nhsuk-grid-column-two-thirds">
                    <p>
                        Let buyers know the minimum recommended technical specification to implement your Catalogue Solution effectively.
                    </p>
                </div>
            </div>
        </div>
        <ul class="bc-c-section-list__items">
            <li id="native-desktop-operating-systems" data-test-id="dashboard-section-native-desktop-operating-systems" class="bc-c-section-list__item bc-t-border-bottom--grey-3 nhsuk-u-margin-bottom-0">
                <div data-test-id="dashboard-section-title" class="bc-u-block-float-left nhsuk-grid-column-one-half">
                    <a href="native-desktop/operating-systems">
                        Supported operating systems
                    </a>
                </div>
                <div data-test-id="dashboard-section-requirement" class="bc-u-block-float-left bc-c-section-list__task-requirement">
                    Mandatory
                </div>
                <strong data-test-id="dashboard-section-status" class="bc-c-section-list__task-tag">
                    @Model.SupportedOperatingSystemsStatus
                </strong>
            </li>

            <li id="native-desktop-connection-details" data-test-id="dashboard-section-native-desktop-connection-details" class="bc-c-section-list__item bc-t-border-bottom--grey-3 nhsuk-u-margin-bottom-0">
                <div data-test-id="dashboard-section-title" class="bc-u-block-float-left nhsuk-grid-column-one-half">
                    <a href="native-desktop/connectivity">
                        Connectivity
                    </a>
                </div>
                <div data-test-id="dashboard-section-requirement" class="bc-u-block-float-left bc-c-section-list__task-requirement">
                    Mandatory
                </div>
                <strong data-test-id="dashboard-section-status" class="bc-c-section-list__task-tag">
                    @Model.ConnectivityStatus
                </strong>
            </li>

            <li id="native-desktop-memory-and-storage" data-test-id="dashboard-section-native-desktop-memory-and-storage" class="bc-c-section-list__item bc-t-border-bottom--grey-3 nhsuk-u-margin-bottom-0">
                <div data-test-id="dashboard-section-title" class="bc-u-block-float-left nhsuk-grid-column-one-half">
                    <a href="native-desktop/memory-and-storage">
                        Memory, storage, processing and resolution
                    </a>
                </div>
                <div data-test-id="dashboard-section-requirement" class="bc-u-block-float-left bc-c-section-list__task-requirement">
                    Mandatory
                </div>
                <strong data-test-id="dashboard-section-status" class="bc-c-section-list__task-tag">
                    @Model.MemoryAndStorageStatus
                </strong>
            </li>

            <li id="native-desktop-third-party" data-test-id="dashboard-section-native-desktop-third-party" class="bc-c-section-list__item bc-t-border-bottom--grey-3 nhsuk-u-margin-bottom-0">
                <div data-test-id="dashboard-section-title" class="bc-u-block-float-left nhsuk-grid-column-one-half">
                    <a href="native-desktop/third-party">
                        Third-party components and device capabilities
                    </a>
                </div>
                <div data-test-id="dashboard-section-requirement" class="bc-u-block-float-left bc-c-section-list__task-requirement">
                    Optional
                </div>
                <strong data-test-id="dashboard-section-status" class="bc-c-section-list__task-tag">
                    @Model.ThirdPartyStatus
                </strong>
            </li>

            <li id="native-desktop-hardware-requirements" data-test-id="dashboard-section-native-desktop-hardware-requirements" class="bc-c-section-list__item bc-t-border-bottom--grey-3 nhsuk-u-margin-bottom-0">
                <div data-test-id="dashboard-section-title" class="bc-u-block-float-left nhsuk-grid-column-one-half">
                    <a href="native-desktop/hardware-requirements">
                        Hardware requirements
                    </a>
                </div>
                <div data-test-id="dashboard-section-requirement" class="bc-u-block-float-left bc-c-section-list__task-requirement">
                    Optional
                </div>
                <strong data-test-id="dashboard-section-status" class="bc-c-section-list__task-tag">
                    @Model.HardwareRequirementsStatus
                </strong>
            </li>

            <li id="native-desktop-additional-information" data-test-id="dashboard-section-native-desktop-additional-information" class="bc-c-section-list__item bc-t-border-bottom--grey-3 nhsuk-u-margin-bottom-0">
                <div data-test-id="dashboard-section-title" class="bc-u-block-float-left nhsuk-grid-column-one-half">
                    <a href="native-desktop/additional-information">
                        Additional information
                    </a>
                </div>
                <div data-test-id="dashboard-section-requirement" class="bc-u-block-float-left bc-c-section-list__task-requirement">
                    Optional
                </div>
                <strong data-test-id="dashboard-section-status" class="bc-c-section-list__task-tag">
                    @Model.AdditionalInformationStatus
                </strong>
            </li>
        </ul>
    </div>
</div>
