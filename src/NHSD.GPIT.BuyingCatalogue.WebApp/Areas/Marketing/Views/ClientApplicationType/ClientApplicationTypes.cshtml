@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Marketing.Models.ClientApplicationType.ClientApplicationTypesModel;
@{
    ViewData["Title"] = "Client application type";
}

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full nhsuk-u-margin-bottom-3">
        <partial name="Partials/_BackLink" model="Model" />
    </div>
    <div class="nhsuk-grid-column-two-thirds">


        <div class="nhsuk-u-margin-top-5 nhsuk-u-margin-bottom-7">
            <h1 data-test-id="section-title" class="nhsuk-u-margin-bottom-3">Client application type</h1>
            <h2 data-test-id="section-main-advice" class="nhsuk-u-font-size-22">Let buyers know which types of application will work with your Catalogue Solution.</h2>
            <div data-test-id="section-additional-advice">

            </div>
        </div>

        <form method="post">

            <input type="hidden" asp-for="@Model.SolutionId" />

            <div data-test-id="section-question-checkbox-options" class="nhsuk-u-margin-bottom-6">

                <div id="client-application-types" data-test-id="question-client-application-types">

                    <div data-test-id="checkbox-options">

                        <div class="nhsuk-form-group">

                            <fieldset class="nhsuk-fieldset" aria-describedby="client-application-types-hint">
                                <legend class="nhsuk-fieldset__legend nhsuk-u-font-size-24 nhsuk-u-font-weight-bold nhsuk-u-margin-bottom-2">
                                    Client application types supported
                                </legend>

                                <div class="nhsuk-hint nhsuk-u-margin-bottom-3 nhsuk-u-margin-top-0" id="client-application-types-hint">
                                    Select at least one client application type. You’ll need to provide further information for each type you select.
                                </div>

                                <div class="nhsuk-checkboxes">

                                    <div class="nhsuk-checkboxes__item">
                                        <input class="nhsuk-checkboxes__input" type="checkbox" asp-for="@Model.BrowserBased">
                                        <label class="nhsuk-label nhsuk-checkboxes__label" asp-for="@Model.BrowserBased">
                                            Browser-based
                                        </label>
                                    </div>

                                    <div class="nhsuk-checkboxes__item">
                                        <input class="nhsuk-checkboxes__input" type="checkbox" asp-for="@Model.NativeMobile">
                                        <label class="nhsuk-label nhsuk-checkboxes__label" asp-for="@Model.NativeMobile">
                                            Native mobile or tablet
                                        </label>
                                    </div>

                                    <div class="nhsuk-checkboxes__item">
                                        <input class="nhsuk-checkboxes__input" type="checkbox" asp-for="@Model.NativeDesktop">
                                        <label class="nhsuk-label nhsuk-checkboxes__label" asp-for="@Model.NativeDesktop">
                                            Native desktop
                                        </label>
                                    </div>

                                </div>
                            </fieldset>


                        </div>

                    </div>

                </div>

            </div>

            <div data-test-id="section-submit-button" class="nhsuk-u-margin-top-7">
                <button class="nhsuk-button" type="submit">
                    Save and return
                </button>
            </div>
        </form>

    </div>
</div>