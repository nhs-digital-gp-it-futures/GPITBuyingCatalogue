@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Marketing.Models.ClientApplicationType.BrowserBasedModel;
@{
    ViewData["Title"] = "Browser based application – all sections";
}

<partial name="Partials/_BackLink" model="Model" />
<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-page-title title="@ViewData["Title"]"
                        advice="Provide information about your browser-based Catalogue Solution." />
    </div>
    <div class="nhsuk-grid-column-full">
        <div data-test-id="dashboard-sectionGroup-browser-based-sections" class="nhsuk-u-padding-bottom-7">
            <div class="bc-c-title">
                <h2>
                    Browser-based information
                </h2>
                <div class="nhsuk-grid-row">
                    <div class="nhsuk-grid-column-two-thirds">
                        <p>
                            Let buyers know the minimum recommended technical specification to implement your Catalogue Solution effectively.
                        </p>
                    </div>
                </div>
            </div>
            <ul class="bc-c-section-list__items" class="bc-c-section-list__item bc-t-border-bottom--grey-3 nhsuk-u-margin-bottom-0">
                <li id="browser-browsers-supported" data-test-id="dashboard-section-browser-browsers-supported">
                    <div data-test-id="dashboard-section-title" class="bc-u-block-float-left nhsuk-grid-column-one-half">
                        <a href="browser-based/supported-browsers">
                            Supported browsers
                        </a>
                    </div>
                    <div data-test-id="dashboard-section-requirement" class="bc-u-block-float-left bc-c-section-list__task-requirement">
                        Mandatory
                    </div>
                    <strong data-test-id="dashboard-section-status" class="bc-c-section-list__task-tag">
                        @Model.SupportedBrowsersStatus
                    </strong>
                </li>
                <li class="bc-c-section-list__item bc-t-border-bottom--grey-3 nhsuk-u-margin-bottom-0" id="browser-mobile-first" data-test-id="dashboard-section-browser-mobile-first">
                    <div data-test-id="dashboard-section-title" class="bc-u-block-float-left nhsuk-grid-column-one-half">
                        <a href="browser-based/mobile-first-approach">
                            Mobile first approach
                        </a>
                    </div>
                    <div data-test-id="dashboard-section-requirement" class="bc-u-block-float-left bc-c-section-list__task-requirement">
                        Mandatory
                    </div>
                    <strong data-test-id="dashboard-section-status" class="bc-c-section-list__task-tag">
                        @Model.MobileFirstApproachStatus
                    </strong>
                </li>
                <li class="bc-c-section-list__item bc-t-border-bottom--grey-3 nhsuk-u-margin-bottom-0" id="browser-plug-ins-or-extensions" data-test-id="dashboard-section-browser-plug-ins-or-extensions">
                    <div data-test-id="dashboard-section-title" class="bc-u-block-float-left nhsuk-grid-column-one-half">
                        <a href="browser-based/plug-ins-or-extensions">
                            Plug-ins or extensions required
                        </a>
                    </div>
                    <div data-test-id="dashboard-section-requirement" class="bc-u-block-float-left bc-c-section-list__task-requirement">
                        Mandatory
                    </div>
                    <strong data-test-id="dashboard-section-status" class="bc-c-section-list__task-tag">
                        @Model.PlugInsStatus
                    </strong>
                </li>
                <li class="bc-c-section-list__item bc-t-border-bottom--grey-3 nhsuk-u-margin-bottom-0" id="browser-connectivity-and-resolution" data-test-id="dashboard-section-browser-connectivity-and-resolution">
                    <div data-test-id="dashboard-section-title" class="bc-u-block-float-left nhsuk-grid-column-one-half">
                        <a href="browser-based/connectivity-and-resolution">
                            Connectivity and resolution
                        </a>
                    </div>
                    <div data-test-id="dashboard-section-requirement" class="bc-u-block-float-left bc-c-section-list__task-requirement">
                        Mandatory
                    </div>
                    <strong data-test-id="dashboard-section-status" class="bc-c-section-list__task-tag">
                        @Model.ConnectivityStatus
                    </strong>
                </li>
                <li class="bc-c-section-list__item bc-t-border-bottom--grey-3 nhsuk-u-margin-bottom-0" id="browser-hardware-requirements" data-test-id="dashboard-section-browser-hardware-requirements">
                    <div data-test-id="dashboard-section-title" class="bc-u-block-float-left nhsuk-grid-column-one-half">
                        <a href="browser-based/hardware-requirements">
                            Hardware requirements
                        </a>
                    </div>
                    <div data-test-id="dashboard-section-requirement" class="bc-u-block-float-left bc-c-section-list__task-requirement">
                        Optional
                    </div>
                    <strong data-test-id="dashboard-section-status" class="bc-c-section-list__task-tag">
                        @Model.HardwareRequirementsStatus
                    </strong>
                </li>
                <li class="bc-c-section-list__item bc-t-border-bottom--grey-3 nhsuk-u-margin-bottom-0" id="browser-additional-information" data-test-id="dashboard-section-browser-additional-information">
                    <div data-test-id="dashboard-section-title" class="bc-u-block-float-left nhsuk-grid-column-one-half">
                        <a href="browser-based/additional-information">
                            Additional information
                        </a>
                    </div>
                    <div data-test-id="dashboard-section-requirement" class="bc-u-block-float-left bc-c-section-list__task-requirement">
                        Optional
                    </div>
                    <strong data-test-id="dashboard-section-status" class="bc-c-section-list__task-tag">
                        @Model.AdditionalInformationStatus
                    </strong>
                </li>
            </ul>
        </div>
    </div>
</div>
