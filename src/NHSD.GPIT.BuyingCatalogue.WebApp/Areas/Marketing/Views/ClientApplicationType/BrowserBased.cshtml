@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Marketing.Models.ClientApplicationType.BrowserBasedModel;
@{
    ViewData["Title"] = "Browser based application - all sections";
}

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full">
        <div data-test-id="sub-dashboard-back-link">
            <div class="nhsuk-back-link">
                <a class="nhsuk-back-link__link" href="~/marketing/supplier/solution/@Model.SolutionId">
                    <svg class="nhsuk-icon nhsuk-icon__chevron-left" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                        <path d="M8.5 12c0-.3.1-.5.3-.7l5-5c.4-.4 1-.4 1.4 0s.4 1 0 1.4L10.9 12l4.3 4.3c.4.4.4 1 0 1.4s-1 .4-1.4 0l-5-5c-.2-.2-.3-.4-.3-.7z"></path>
                    </svg>
                    Return to all sections
                </a>
            </div>
        </div>
    </div>
    <div class="nhsuk-grid-column-two-thirds">
        <div class="nhsuk-u-margin-top-5 nhsuk-u-margin-bottom-7">
            <h1 data-test-id="sub-dashboard-title" class="nhsuk-u-margin-bottom-3">Browser-based application – all sections</h1>
            <h2 data-test-id="sub-dashboard-main-advice" class="nhsuk-u-font-size-22">Provide information about your browser-based Catalogue Solution.</h2>
            <div data-test-id="sub-dashboard-additional-advice">
            </div>
        </div>
    </div>
    <div class="nhsuk-grid-column-full">
        <div data-test-id="dashboard-sectionGroup-browser-based-sections" class="nhsuk-u-padding-bottom-7">
            <div class="bc-c-title">
                <h2 class="nhsuk-u-font-size-24">
                    Browser-based information
                </h2>
                <div class="nhsuk-grid-row">
                    <div class="nhsuk-grid-column-two-thirds">
                        <p>
                            Let buyers know the minimum recommended technical specification to implement your Catalogue Solution effectively.
                        </p>
                    </div>
                </div>
            </div>
            <ul class="bc-c-section-list__items">

                <div id="browser-browsers-supported" data-test-id="dashboard-section-browser-browsers-supported">
                    <li class="bc-c-section-list__item bc-t-border-bottom--grey-3 nhsuk-u-margin-bottom-0">
                        <div data-test-id="dashboard-section-title" class="bc-u-block-float-left nhsuk-grid-column-one-half">
                            <a href="browser-based/supported-browsers">
                                Supported browsers
                            </a>
                        </div>
                        <span data-test-id="dashboard-section-requirement" class="bc-u-block-float-left bc-c-section-list__task-requirement">
                            <p class="nhsuk-u-margin-bottom-0">Mandatory</p>
                        </span>
                        <strong data-test-id="dashboard-section-status" class="bc-c-section-list__task-tag">
                            @Model.SupportedBrowsersStatus
                        </strong>
                    </li>
                </div>

                <div id="browser-mobile-first" data-test-id="dashboard-section-browser-mobile-first">
                    <li class="bc-c-section-list__item bc-t-border-bottom--grey-3 nhsuk-u-margin-bottom-0">
                        <div data-test-id="dashboard-section-title" class="bc-u-block-float-left nhsuk-grid-column-one-half">
                            <a href="browser-based/mobile-first-approach">
                                Mobile first approach
                            </a>
                        </div>
                        <span data-test-id="dashboard-section-requirement" class="bc-u-block-float-left bc-c-section-list__task-requirement">
                            <p class="nhsuk-u-margin-bottom-0">Mandatory</p>
                        </span>
                        <strong data-test-id="dashboard-section-status" class="bc-c-section-list__task-tag">
                            @Model.MobileFirstApproachStatus
                        </strong>
                    </li>
                </div>

                <div id="browser-plug-ins-or-extensions" data-test-id="dashboard-section-browser-plug-ins-or-extensions">
                    <li class="bc-c-section-list__item bc-t-border-bottom--grey-3 nhsuk-u-margin-bottom-0">
                        <div data-test-id="dashboard-section-title" class="bc-u-block-float-left nhsuk-grid-column-one-half">
                            <a href="browser-based/plug-ins-or-extensions">
                                Plug-ins or extensions required
                            </a>
                        </div>
                        <span data-test-id="dashboard-section-requirement" class="bc-u-block-float-left bc-c-section-list__task-requirement">
                            <p class="nhsuk-u-margin-bottom-0">Mandatory</p>
                        </span>
                        <strong data-test-id="dashboard-section-status" class="bc-c-section-list__task-tag">
                            @Model.PlugInsStatus
                        </strong>
                    </li>
                </div>

                <div id="browser-connectivity-and-resolution" data-test-id="dashboard-section-browser-connectivity-and-resolution">
                    <li class="bc-c-section-list__item bc-t-border-bottom--grey-3 nhsuk-u-margin-bottom-0">
                        <div data-test-id="dashboard-section-title" class="bc-u-block-float-left nhsuk-grid-column-one-half">
                            <a href="browser-based/connectivity-and-resolution">
                                Connectivity and resolution
                            </a>
                        </div>
                        <span data-test-id="dashboard-section-requirement" class="bc-u-block-float-left bc-c-section-list__task-requirement">
                            <p class="nhsuk-u-margin-bottom-0">Mandatory</p>
                        </span>
                        <strong data-test-id="dashboard-section-status" class="bc-c-section-list__task-tag">
                            @Model.ConnectivityStatus
                        </strong>
                    </li>
                </div>

                <div id="browser-hardware-requirements" data-test-id="dashboard-section-browser-hardware-requirements">
                    <li class="bc-c-section-list__item bc-t-border-bottom--grey-3 nhsuk-u-margin-bottom-0">
                        <div data-test-id="dashboard-section-title" class="bc-u-block-float-left nhsuk-grid-column-one-half">
                            <a href="browser-based/hardware-requirements">
                                Hardware requirements
                            </a>
                        </div>
                        <span data-test-id="dashboard-section-requirement" class="bc-u-block-float-left bc-c-section-list__task-requirement">
                            <p class="nhsuk-u-margin-bottom-0">Optional</p>
                        </span>
                        <strong data-test-id="dashboard-section-status" class="bc-c-section-list__task-tag">
                            @Model.HardwareRequirementsStatus
                        </strong>
                    </li>
                </div>

                <div id="browser-additional-information" data-test-id="dashboard-section-browser-additional-information">
                    <li class="bc-c-section-list__item bc-t-border-bottom--grey-3 nhsuk-u-margin-bottom-0">
                        <div data-test-id="dashboard-section-title" class="bc-u-block-float-left nhsuk-grid-column-one-half">
                            <a href="browser-based/additional-information">
                                Additional information
                            </a>
                        </div>
                        <span data-test-id="dashboard-section-requirement" class="bc-u-block-float-left bc-c-section-list__task-requirement">
                            <p class="nhsuk-u-margin-bottom-0">Optional</p>
                        </span>
                        <strong data-test-id="dashboard-section-status" class="bc-c-section-list__task-tag">
                            @Model.AdditionalInformationStatus
                        </strong>
                    </li>
                </div>

            </ul>
        </div>
    </div>
</div>