@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Marketing.Models.HostingType.PublicCloudModel;
@{
    ViewData["Title"] = "Hosting type - public cloud";
}

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full nhsuk-u-margin-bottom-3">
        <partial name="_BackLink" model="Model"/>
    </div>
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-validation-summary/>
        <partial name="_NhsPageTitle" model="@Model.PageTitle()"/>
        <form method="post">
            <input type="hidden" asp-for="@Model.SolutionId"/>
            <input type="hidden" asp-for="@Model.BackLink"/>
            <nhs-validation-textarea asp-for="PublicCloud.Summary"
                                     label-text="Summary (optional)"
                                     label-hint="Provide information on how your Catalogue Solution can be hosted."/>
            <nhs-validation-input asp-for="PublicCloud.Link"
                                  label-text="Link to more information (optional)"
                                  label-hint="Provide a URL to a page that gives buyers further information about the public cloud hosting requirements for your Catalogue Solution."/>
            <nhs-fieldset-form asp-for="@Model"
                               label-text="HSCN/N3 connectivity (optional)"
                               label-hint="Use the checkbox if end user devices must be connected to HSCN/N3 in order to use your Catalogue Solution.">
                <nhs-checkbox-container>
                    <nhs-validation-checkbox asp-for="RequiresHscnChecked"
                                             label-text="Yes, devices must be connected to HSCN/N3"/>
                </nhs-checkbox-container>
            </nhs-fieldset-form>
            <nhs-submit-button/>
        </form>
    </div>
</div>