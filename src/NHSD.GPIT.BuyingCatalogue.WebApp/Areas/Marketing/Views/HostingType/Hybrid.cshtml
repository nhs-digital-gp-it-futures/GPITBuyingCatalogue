@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Marketing.Models.HostingType.HybridModel;
@{
    ViewData["Title"] = "Hosting type - hybrid";
}

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full nhsuk-u-margin-bottom-3">
        <partial name="Partials/_BackLink" model="Model" />
    </div>
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-validation-summary />
        <nhs-page-title title="Hosting type – hybrid"
                        title-advice="Provide information to buyers about how your Catalogue Solution can be hosted." />
        <form method="post">
            <input type="hidden" asp-for="@Model.SolutionId" />
            <input type="hidden" asp-for="@Model.BackLink" />
            <nhs-textarea asp-for="HybridHostingType.Summary"
                                     label-text="Summary (optional)"
                                     label-hint="Provide information on how your Catalogue Solution can be hosted." />
            <nhs-input asp-for="HybridHostingType.Link"
                                  label-text="Link to more information (optional)"
                                  label-hint="Provide a URL to a page that gives buyers further information about the hybrid hosting requirements for your Catalogue Solution." />
            <nhs-textarea asp-for="HybridHostingType.HostingModel"
                                     label-text="Data centre model (optional)"
                                     label-hint="Provide information on the data centre hosting model for your Catalogue Solution." />
            <nhs-fieldset-form asp-for="@Model"
                               label-text="HSCN/N3 connectivity (optional)"
                               label-hint="Use the checkbox if end user devices must be connected to HSCN/N3 in order to use your Catalogue Solution.">
                <nhs-checkbox-container>
                    <nhs-checkbox asp-for="RequiresHscnChecked"
                                             label-text="Yes, devices must be connected to HSCN/N3" />
                </nhs-checkbox-container>
            </nhs-fieldset-form>
            <nhs-submit-button />
        </form>
    </div>
</div>
