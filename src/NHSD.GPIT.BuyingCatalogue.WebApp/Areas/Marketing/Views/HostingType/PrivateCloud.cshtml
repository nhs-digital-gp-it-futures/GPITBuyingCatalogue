@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Marketing.Models.HostingType.PrivateCloudModel;
@{
    ViewData["Title"] = "Hosting type – private cloud";
}

<partial name="Partials/_BackLink" model="Model" />
<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-validation-summary />
        <nhs-page-title title="@ViewData["Title"]"
                        advice="Provide information to buyers about how your Catalogue Solution can be hosted." />
        <form method="post">
            <input type="hidden" asp-for="@Model.SolutionId" />
            <input type="hidden" asp-for="@Model.BackLink" />
            <nhs-textarea asp-for="@Model.PrivateCloud.Summary"
                          label-text="Summary (optional)"
                          label-hint="Provide information on how your Catalogue Solution can be hosted." />
            <nhs-input asp-for="@Model.PrivateCloud.Link"
                       label-text="Link to more information (optional)"
                       label-hint="Provide a URL to a page that gives buyers further information about the private cloud hosting requirements for your Catalogue Solution." />
            <nhs-textarea asp-for="@Model.PrivateCloud.HostingModel"
                          label-text="Data centre model (optional)"
                          label-hint="Provide information on the data centre hosting model for your Catalogue Solution." />
            <nhs-fieldset-form-label asp-for="@Model"
                                     label-text="HSCN/N3 connectivity (optional)"
                                     label-hint="Use the checkbox if end user devices must be connected to HSCN/N3 in order to use your Catalogue Solution.">
                <nhs-checkbox-container>
                    <nhs-checkbox asp-for="@Model.RequiresHscnChecked"
                                  label-text="Yes, devices must be connected to HSCN/N3" />
                </nhs-checkbox-container>
            </nhs-fieldset-form-label>
            <nhs-submit-button />
        </form>
    </div>
</div>
