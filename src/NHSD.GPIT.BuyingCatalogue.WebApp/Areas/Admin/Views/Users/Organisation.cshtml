@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Models.UserModels.OrganisationModel
@{
    ViewBag.Title = "Edit organisation";
}

<partial name="Partials/_BackLink" model="Model" />

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-validation-summary />

        <nhs-page-title title="@ViewBag.Title"
                        caption="@Model!.Email" />
                
        <form method="post">
            <input type="hidden" asp-for="Email"/>

            <div class="nhsuk-u-margin-bottom-9">
                <nhs-auto-complete asp-for="SelectedOrganisationId"
                                   asp-items="@(new SelectList(Model.Organisations, "Value", "Text"))"
                                   label-text="Organisation"/>
            </div>

            <nhs-submit-button/>
        </form>
    </div>
</div>
