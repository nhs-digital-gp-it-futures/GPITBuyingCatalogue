@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Models.UserModels.AccountStatusModel
@{
    ViewBag.Title = "Edit account status";
}

<partial name="Partials/_BackLink" model="Model" />

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-validation-summary RadioId="SelectedAccountStatusId" />

        <nhs-page-title title="@ViewBag.Title"
                        caption="@Model!.Email" />
                
        <form method="post">
            <input type="hidden" asp-for="Email"/>

            <div class="nhsuk-u-margin-bottom-9">
                <nhs-fieldset-form-label asp-for="SelectedAccountStatusId"
                                         label-text="Account status"
                                         label-hint="Select an option"
                                         size="Medium">
                    <nhs-radio-buttons asp-for="SelectedAccountStatusId"
                                       values="Model.AccountStatusOptions.Cast<object>()"
                                       value-name="Value"
                                       display-name="Text" />
                </nhs-fieldset-form-label>
            </div>

            <nhs-submit-button/>
        </form>
    </div>
</div>
