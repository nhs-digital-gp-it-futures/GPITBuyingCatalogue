@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Models.EmailDomainManagement.DeleteEmailDomainModel

@{
    ViewBag.Title = "Delete this email domain?";
}

<partial name="Partials/_BackLink" model="Model" />
<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-page-title title="@ViewBag.Title" advice="@Model.AdviceText" />

        <form method="post">
            <input type="hidden" asp-for="EmailDomain"/>
            <input type="hidden" asp-for="BackLink"/>

            <div>
                <nhs-submit-button text="Delete email domain" />
            </div>
            <div>
                <a href="@Model.BackLink">Cancel</a>
            </div>
        </form>
    </div>
</div>
