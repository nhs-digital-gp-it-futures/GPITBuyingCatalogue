@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Models.EmailDomainManagement.AddEmailDomainModel

@{
    ViewBag.Title = "Add an email domain";
}

<partial name="Partials/_BackLink" model="Model" />
<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-validation-summary />

        <nhs-page-title title="@ViewBag.Title" advice="Enter the email domain you want to add to the allow list."/>

        <form method="post">
            <input type="hidden" asp-for="BackLink"/>

            <nhs-input label-text="Email domain"
                       label-hint="Include the '@@' symbol and everything after it, for example, @@nhs.net. To ensure subdomains are included use '*', for example @@*.nhs.net."
                       asp-for="EmailDomain"/>

            <div>
                <nhs-submit-button/>
            </div>
            <div>
                <a href="@Model.BackLink">Cancel</a>
            </div>
        </form>
    </div>
</div>
