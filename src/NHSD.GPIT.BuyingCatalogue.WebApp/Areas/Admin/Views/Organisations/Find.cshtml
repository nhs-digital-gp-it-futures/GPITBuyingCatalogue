@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Models.FindOrganisationModel
@{
    ViewBag.Title = "Search for an organisation";
}

<div data-test-id="find-org-page">
    <partial name="Partials/_BackLink" model="Model" />
    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
            <nhs-validation-summary />
            <nhs-page-title title="@ViewBag.Title" advice="Enter the correct Organisation Data Service (ODS) code to find the organisation you're looking for." />
            <form method="post">
                <input type="hidden" asp-for="@Model.BackLink" />
                <div class="nhsuk-grid-row">
                    <div class="nhsuk-grid-column-two-thirds">
                        <div data-test-id="question-odsCode">
                            <nhs-input
                                asp-for="@Model.OdsCode" 
                                label-text="Enter ODS code"
                            />
                        </div>
                    </div>
                </div>
                <div data-test-id="continue-button">
                    <nhs-submit-button text="Search" />
                </div>
            </form>
        </div>
    </div>
</div>
