@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Models.EditOrganisationModel
@{
    ViewData["Title"] = "Buying Catalogue - Admin";
}

<div class="nhsuk-width-container" data-test-id="edit-organisation-page">
    <partial name="_BackLink" model="Model" />
    <h1 data-test-id="edit-org-page-title" class="nhsuk-u-margin-top-7 nhsuk-u-margin-bottom-3">Edit @Model.Organisation.Name</h1>
    <h2 data-test-id="edit-org-page-description" class="nhsuk-u-font-size-22 nhsuk-u-margin-bottom-9">Change the Organisation End User Agreement status for this organisation.</h2>
    <h3 data-test-id="organisation-ods-code-heading" class="nhsuk-heading-s nhsuk-u-margin-bottom-3">ODS code</h3>
    <div data-test-id="organisation-ods-code" class="nhsuk-u-font-size-19 nhsuk-u-margin-bottom-5">@Model.Organisation.OdsCode</div>
    <h3 data-test-id="organisation-name-heading" class="nhsuk-heading-s nhsuk-u-margin-bottom-3">Organisation name</h3>
    <div data-test-id="organisation-name" class="nhsuk-u-font-size-19 nhsuk-u-margin-bottom-5">@Model.Organisation.Name</div>
    <h3 data-test-id="organisation-address-heading" class="nhsuk-heading-s nhsuk-u-margin-bottom-3">Business address</h3>
    <div data-test-id="organisation-address" class="nhsuk-u-margin-bottom-5">
        <div data-test-id="organisation-address-1" class="nhsuk-u-font-size-19">@Model.OrganisationAddress.Line1</div>
        <div data-test-id="organisation-address-2" class="nhsuk-u-font-size-19">@Model.OrganisationAddress.Line2</div>
        <div data-test-id="organisation-address-3" class="nhsuk-u-font-size-19">@Model.OrganisationAddress.Line3</div>
        <div data-test-id="organisation-address-4" class="nhsuk-u-font-size-19">@Model.OrganisationAddress.Town</div>
        <div data-test-id="organisation-address-5" class="nhsuk-u-font-size-19">@Model.OrganisationAddress.County</div>
        <div data-test-id="organisation-address-6" class="nhsuk-u-font-size-19">@Model.OrganisationAddress.Postcode</div>
        <div data-test-id="organisation-address-7" class="nhsuk-u-font-size-19">@Model.OrganisationAddress.Country</div>
    </div>
    <h3 data-test-id="organisation-primary-role-id-heading" class="nhsuk-heading-s nhsuk-u-margin-bottom-2">Primary Role ID</h3>
    <div data-test-id="organisation-primary-role-id" class="nhsuk-u-font-size-19 nhsuk-u-margin-bottom-5">@Model.Organisation.PrimaryRoleId</div>

    <form method="post">
        <div data-test-id="catalogue-agreement-checkbox" class="nhsuk-u-margin-bottom-9">
            <div class="nhsuk-form-group">
                <div class="nhsuk-checkboxes">
                    <div class="nhsuk-checkboxes__item">
                        <input class="nhsuk-checkboxes__input" asp-for="@Model.CatalogueAgreementSigned" type="checkbox">
                        <label class="nhsuk-label nhsuk-checkboxes__label" asp-for="@Model.CatalogueAgreementSigned">
                            Organisation End User Agreement has been signed
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div data-test-id="save-button">
            <button class="nhsuk-button nhsuk-u-margin-bottom-9" type="submit">
                Save
            </button>
        </div>
    </form>
</div>
