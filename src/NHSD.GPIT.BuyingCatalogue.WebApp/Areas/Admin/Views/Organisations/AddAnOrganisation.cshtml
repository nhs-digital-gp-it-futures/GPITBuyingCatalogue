@using NHSD.GPIT.BuyingCatalogue.EntityFramework.Organisations.Models
@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Models.AddAnOrganisationModel
@{
    ViewData["Title"] = "Buying Catalogue – Admin";
}

<div data-test-id="add-proxy-organisation-page">
    <partial name="Partials/_BackLink" model="Model" />
    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
            <nhs-page-title
                title="Add organisation to @Model.Organisation.Name"
                advice="@Model.Organisation.Name will then be able to create orders on this organisation's behalf." />
            <form method="post">
                <input type="hidden" asp-for="@Model.Organisation.Id" />

                <nhs-fieldset-form-label
                    asp-for="@Model"
                    label-text="Which organisation are you looking for?"
                    label-hint="Select one option.">
                    <nhs-radio-buttons asp-for="SelectedOrganisation"
                                       values="@Model.AvailableOrganisations"
                                       value-name="@nameof(Organisation.Id)"
                                       display-name="@nameof(Organisation.Name)" />
                </nhs-fieldset-form-label>
                <nhs-submit-button text="Confirm" />
            </form>
        </div>
    </div>
</div>
