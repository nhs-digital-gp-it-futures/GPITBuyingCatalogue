@using NHSD.GPIT.BuyingCatalogue.EntityFramework.Extensions
@using NHSD.GPIT.BuyingCatalogue.Framework.Constants
@using NHSD.GPIT.BuyingCatalogue.Framework.Extensions;
@using NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Controllers;

@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Models.ListPriceModels.ManageListPricesModel

@{
    ViewBag.Title = "Additional Service list price";
}

<partial name="Partials/_BackLink" model="Model" />
<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-validation-summary />
        <nhs-page-title title="@ViewBag.Title"
                        caption="@Model.CatalogueName"
                        advice="Provide details of how much your additional Service costs. You must add at least one price type." />

        <vc:nhs-action-link text="Add a list price" url="@Url.Action(
                                                   nameof(AdditionalServicesController.AddListPrice),
                                                   typeof(AdditionalServicesController).ControllerName(),
                                                   new { solutionId = Model.SolutionId.Value.ToString(), additionalServiceId = Model.CatalogueItemId.ToString() })" />

        <nhs-table data-test-id="solution-list-prices">
            <nhs-table-column>Provisioning type</nhs-table-column>
            <nhs-table-column>Price</nhs-table-column>
            <nhs-table-column>Unit</nhs-table-column>
            <nhs-table-column></nhs-table-column>

            @foreach (var cataloguePrice in Model.CataloguePrices)
            {
                <nhs-table-row-container>
                    <nhs-table-cell>@cataloguePrice.ProvisioningType.Name()</nhs-table-cell>
                    <nhs-table-cell>@CurrencyCodeSigns.Code[cataloguePrice.CurrencyCode]@cataloguePrice.Price</nhs-table-cell>
                    <nhs-table-cell>@cataloguePrice.PricingUnit.Description</nhs-table-cell>
                    <nhs-table-cell>
                        <a asp-action="EditListPrice"
                           asp-controller="additionalServices"
                           asp-route-solutionId="@Model.SolutionId.Value"
                           asp-route-listPriceId="@cataloguePrice.CataloguePriceId"
                           asp-route-additionalServiceId="@Model.CatalogueItemId">
                            Edit
                        </a>
                    </nhs-table-cell>
                </nhs-table-row-container>
            }
        </nhs-table>

        <vc:nhs-secondary-button text="Continue" url="@Url.Action(
                                                     nameof(AdditionalServicesController.EditAdditionalService),
                                                     typeof(AdditionalServicesController).ControllerName(),
                                                     new { solutionId = Model.SolutionId.Value.ToString(), additionalServiceId = Model.CatalogueItemId.ToString() })" use-primary-colour="true" />

    </div>
</div>
