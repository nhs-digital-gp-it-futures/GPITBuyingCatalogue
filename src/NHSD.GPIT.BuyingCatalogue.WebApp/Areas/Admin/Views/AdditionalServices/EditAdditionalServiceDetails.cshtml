@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Models.AdditionalServices.EditAdditionalServiceDetailsModel;
@{
    ViewBag.Title = Model.Title;
}

<partial name="Partials/_BackLink" model="Model" />
<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-validation-summary />
        <nhs-page-title title="@ViewBag.Title"
                        caption="@Model.SolutionName"
                        advice="Provide details about your Additional Service." />

        <form method="post">
            <input type="hidden" asp-for="Title" />
            <input type="hidden" asp-for="BackLink" />
            <input type="hidden" asp-for="SolutionName" />
            <input type="hidden" asp-for="CatalogueItemName" />
            <input type="hidden" asp-for="CatalogueItemId" />
            <input type="hidden" asp-for="IsEdit" />

            @if (Model.IsEdit)
            {
                <input type="hidden" asp-for="IdDisplay" />
                <nhs-summary-list>
                    <nhs-summary-list-row label-text="Additional Service ID">
                        <p>
                            @Model.IdDisplay
                        </p>
                    </nhs-summary-list-row>
                </nhs-summary-list>
            }
            else
            {
                <nhs-input asp-for="IdDisplay"
                           label-hint="Additional Service IDs are made up of the solution ID and a 3-digit code unique to this service, for example, 10000-001A001."
                           label-text="Additional Service ID" />
            }


            <nhs-input asp-for="Name"
                       label-text="Additional Service name" />
            <nhs-textarea asp-for="Description"
                          label-text="Additional Service description"
                          label-hint="Describe the extra functionality provided by your Additional Service."
                          number-of-rows="5" />
            <nhs-submit-button />
        </form>
    </div>
</div>
