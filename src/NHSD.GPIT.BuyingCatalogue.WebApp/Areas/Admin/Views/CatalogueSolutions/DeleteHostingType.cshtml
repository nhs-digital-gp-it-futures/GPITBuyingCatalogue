@using EnumsNET;
@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Models.HostingTypeModels.DeleteHostingTypeConfirmationModel
@{
    ViewBag.Title = $"Delete {Model.HostingType.AsString(EnumFormat.DisplayName)!.ToLowerInvariant()}?";
}

<partial name="Partials/_BackLink" model="Model" />
<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-validation-summary />
        <nhs-page-title title="@ViewBag.Title"
                        caption="@Model.SolutionName"
                        advice="Confirm you want to delete the hosting type." />
        <div class="nhsuk-grid-row">
            <div class="nhsuk-grid-column-two-thirds">
                <form method="post">
                    <input type="hidden" asp-for="SolutionName" />
                    <input type="hidden" asp-for="BackLinkText" />
                    <input type="hidden" asp-for="HostingType" />
                    <input type="hidden" asp-for="BackLink" />
                    <div>
                        <nhs-submit-button text="Delete" />
                    </div>
                    <div>
                        <a href="@Model.BackLink">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
