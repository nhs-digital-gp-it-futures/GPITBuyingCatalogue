@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Models.HostingTypeModels.PublicCloudModel;
@{
    ViewData["Title"] = "Catalogue Solution hosting type";
}
<div class="nhsuk-width-container">
    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-full">
            <partial name="Partials/_BackLink" model="Model" />
        </div>

        <div class="nhsuk-grid-column-two-thirds">

            <nhs-validation-summary />
            <nhs-page-title title="Public cloud hosting"
                            advice="Provide the following information about the public cloud hosting of your Catalogue Solution." />

            <form method="post">
                <input type="hidden" asp-for="@Model.BackLink" />

                <nhs-textarea asp-for="Summary"
                              label-text="Summary"
                              label-hint="Provide information on how your Catalogue Solution can be hosted."
                              number-of-rows="5" />

                <nhs-input asp-for="Link"
                           label-text="Link to more information (optional)"
                           label-hint="Provide a URL to a page that gives buyers further information about the public cloud hosting requirements for your Catalogue Solution."
                           character-count="true" />

                <h2>HSCN/N3 connectivity (optional)</h2>
                <p>Use the checkbox if end user devices must be connected to HSCN/N3 in order to use your Catalogue Solution.</p>

                <nhs-fieldset-form-label asp-for="@Model"
                                         size="Medium">
                    <nhs-checkbox-container>
                        <nhs-checkbox asp-for="RequiresHscnChecked"
                                      label-text="Yes, devices must be connected to HSCN/N3" />
                    </nhs-checkbox-container>
                </nhs-fieldset-form-label>

                <nhs-submit-button text="Save and Continue" />
            </form>

        </div>
    </div>
</div>
