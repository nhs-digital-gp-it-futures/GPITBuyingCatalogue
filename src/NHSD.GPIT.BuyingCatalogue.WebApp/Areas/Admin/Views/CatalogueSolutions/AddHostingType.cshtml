@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Models.HostingTypeModels.HostingTypeSelectionModel
@{
    ViewData["Title"] = "Add a Hosting Type page";
}
<div class="nhsuk-width-container ">
    <main id="maincontent" role="main">
        <partial name="Partials/_BackLink" model="Model" />
        <div class="nhsuk-grid-row">
            <div class="nhsuk-grid-column-two-thirds">
                <nhs-validation-summary />
                <nhs-page-title title="Add a hosting type"
                                advice="Select a hosting type that supports your Catalogue Solution. You can add other options later." />
                <form method="post">
                    <div class="nhsuk-form-group">
                        <nhs-fieldset-form-label asp-for="@Model">
                            <nhs-radio-buttons asp-for="@Model.SelectedHostingType"
                                               values="@Model.HostingTypesToAdd"
                                               value-name="Id"
                                               display-name="Name" />
                        </nhs-fieldset-form-label>
                    </div>
                    <br />
                    <nhs-submit-button text="Save and continue" />
                </form>
            </div>
        </div>
    </main>
</div>
