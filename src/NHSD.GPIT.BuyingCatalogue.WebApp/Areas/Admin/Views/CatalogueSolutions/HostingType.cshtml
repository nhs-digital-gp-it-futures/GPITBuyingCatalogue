@using NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Controllers
@using NHSD.GPIT.BuyingCatalogue.Framework.Extensions
@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Models.HostingTypeSectionModel;
@{
    ViewData["Title"] = "Catalogue Solution hosting type";
}
<div class="nhsuk-width-container">
    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-full">
            <partial name="Partials/_BackLink" model="Model" />
        </div>
        <div class="nhsuk-grid-column-two-thirds">
            <nhs-validation-summary />
            <nhs-page-title title="Hosting Type" caption="@Model.SolutionName"
                            advice="Let buyers know how your Catalogue Solution can be hosted. You must add at least one." />

            @*TODO: Update Action Link to Add Hosting Type*@
            <vc:nhs-action-link url="@Url.Action(
            nameof(CatalogueSolutionsController.HostingType),
            typeof(CatalogueSolutionsController).ControllerName())" text="Add a hosting type" />

            <p>
                Use the link to add information on each of the hosting types your Catalogue Solution works with.
            </p>

            <form method="post">
                <input type="hidden" asp-for="@Model.SolutionId" />
                <input type="hidden" asp-for="@Model.BackLink" />

                @if (Convert.ToBoolean(Model.IsComplete))
                {
                    <nhs-table>
                        <nhs-table-column>Hosting types added</nhs-table-column>
                        <nhs-table-column> </nhs-table-column>


                        @if (Convert.ToBoolean(Model.PublicCloud.IsValid()))
                        {
                            <nhs-table-row-container>
                                <nhs-table-cell>Public cloud</nhs-table-cell>
                                <nhs-table-cell>
                                    <a href="#">Edit</a>
                                </nhs-table-cell>
                            </nhs-table-row-container>
                        }

                        @if (Convert.ToBoolean(Model.PrivateCloud.IsValid()))
                        {
                            <nhs-table-row-container>
                                <nhs-table-cell>Private cloud</nhs-table-cell>
                                <nhs-table-cell>
                                    <a href="#">Edit</a>
                                </nhs-table-cell>
                            </nhs-table-row-container>
                        }

                        @if (Convert.ToBoolean(Model.Hybrid.IsValid()))
                        {
                            <nhs-table-row-container>
                                <nhs-table-cell>Hybrid</nhs-table-cell>
                                <nhs-table-cell>
                                    <a href="#">Edit</a>
                                </nhs-table-cell>
                            </nhs-table-row-container>
                        }

                        @if (Convert.ToBoolean(Model.OnPremise.IsValid()))
                        {
                            <nhs-table-row-container>
                                <nhs-table-cell>On premise</nhs-table-cell>
                                <nhs-table-cell>
                                    <a href="#">Edit</a>
                                </nhs-table-cell>
                            </nhs-table-row-container>
                        }

                    </nhs-table>
                }
                <nhs-submit-button text="Save and Continue" />
            </form>
        </div>
    </div>
</div>
