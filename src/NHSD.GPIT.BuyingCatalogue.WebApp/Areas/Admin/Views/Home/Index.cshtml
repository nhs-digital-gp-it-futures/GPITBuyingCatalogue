@using NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Controllers
@using NHSD.GPIT.BuyingCatalogue.Framework.Extensions
@using CatalogueSolutionsController = NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Order.Controllers.CatalogueSolutionsController
@{
    ViewBag.Title = "Buying Catalogue admin";
}

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">

        <nhs-page-title title="@ViewBag.Title"
                        advice="Manage organisations, user accounts and solutions on the Buying Catalogue." />

        <hr>
        <p>
            As an administrator for the Buying Catalogue, you can add organisations and users and edit the details of existing accounts. You can also add new solutions and edit ones that have already been created.
        </p>
        <vc:nhs-action-link url="@Url.Action(
                                nameof(HomeController.BuyerOrganisations),
                                typeof(HomeController).ControllerName())"
                            text="Manage buyer organisations and users" />
        <vc:nhs-action-link url="@Url.Action(
                                nameof(SuppliersController.Index),
                                typeof(SuppliersController).ControllerName())"
                            text="Manage suppliers organisations" />

        <vc:nhs-action-link url="@Url.Action(
                                nameof(CatalogueSolutionsController.Index),
                                typeof(CatalogueSolutionsController).ControllerName())"
                            text="Manage Catalogue Solutions" />

        <vc:nhs-action-link url="@Url.Action(
                                nameof(SupplierDefinedEpicsController.Dashboard),
                                typeof(SupplierDefinedEpicsController).ControllerName())"
                            text="Manage Supplier defined Epics" />
    </div>
</div>
