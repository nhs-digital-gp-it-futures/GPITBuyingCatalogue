@{
    Layout = "_Layout";
    ViewData["Title"] = "Admin Landing Page";
}

<div class="nhsuk-width-container ">
    <main class="nhsuk-main-wrapper " id="maincontent" role="main">
        <div class="nhsuk-grid-row">
            <div class="nhsuk-grid-column-two-thirds">
                <h1>Buying Catalogue admin</h1>
                <p class="nhsuk-lede-text">
                    Manage organisations, user accounts and solutions on the Buying Catalogue.
                </p>
                <hr>
                <p>
                    As an administrator for the Buying Catalogue, you can add organisations and users and edit the details of existing accounts. You can also add new solutions and edit ones that are already published.
                </p>

                <div class="nhsuk-action-link">
                    <a asp-action="BuyerOrganisations" asp-controller="Home" class="nhsuk-action-link__link">
                        <svg class="nhsuk-icon nhsuk-icon__arrow-right-circle" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                            <path d="M0 0h24v24H0z" fill="none"></path>
                            <path d="M12 2a10 10 0 0 0-9.95 9h11.64L9.74 7.05a1 1 0 0 1 1.41-1.41l5.66 5.65a1 1 0 0 1 0 1.42l-5.66 5.65a1 1 0 0 1-1.41 0 1 1 0 0 1 0-1.41L13.69 13H2.05A10 10 0 1 0 12 2z"></path>
                        </svg>
                        <span class="nhsuk-action-link__text">Manage buyer organisations and users</span>
                    </a>
                </div>

                <div class="nhsuk-action-link">
                    <a class="nhsuk-action-link__link" href="#">
                        <svg class="nhsuk-icon nhsuk-icon__arrow-right-circle" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                            <path d="M0 0h24v24H0z" fill="none"></path>
                            <path d="M12 2a10 10 0 0 0-9.95 9h11.64L9.74 7.05a1 1 0 0 1 1.41-1.41l5.66 5.65a1 1 0 0 1 0 1.42l-5.66 5.65a1 1 0 0 1-1.41 0 1 1 0 0 1 0-1.41L13.69 13H2.05A10 10 0 1 0 12 2z"></path>
                        </svg>
                        <span class="nhsuk-action-link__text">Manage suppliers organisations</span>
                    </a>
                </div>

                <div class="nhsuk-action-link">
                    <a asp-action="Index" asp-controller="CatalogueSolutions" class="nhsuk-action-link__link">
                        <svg class="nhsuk-icon nhsuk-icon__arrow-right-circle" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                            <path d="M0 0h24v24H0z" fill="none"></path>
                            <path d="M12 2a10 10 0 0 0-9.95 9h11.64L9.74 7.05a1 1 0 0 1 1.41-1.41l5.66 5.65a1 1 0 0 1 0 1.42l-5.66 5.65a1 1 0 0 1-1.41 0 1 1 0 0 1 0-1.41L13.69 13H2.05A10 10 0 1 0 12 2z"></path>
                        </svg>
                        <span class="nhsuk-action-link__text">Manage Catalogue Solutions</span>
                    </a>
                </div>
            </div>
        </div>
        <br><br>

    </main>
</div>
