@using NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Models.ListPriceModels
@model ListPriceTypeModel

@{
    ViewBag.Title = "List price type";
}

<partial name="Partials/_BackLink" model="Model" />
<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-validation-summary RadioId="SelectedCataloguePriceType" />
        <nhs-page-title title="@ViewBag.Title"
                        caption="@Model.CatalogueItemName"
                        advice="Select either a flat or tiered list price type." />
            <form method="post">
                <input type="hidden" asp-for="BackLink" />
                <input type="hidden" asp-for="CatalogueItemName" />

                <nhs-fieldset-form-label asp-for="SelectedCataloguePriceType">
                    <nhs-radio-buttons asp-for="SelectedCataloguePriceType"
                                        values="@Model.AvailableListPriceTypes.Cast<object>()"
                                        display-name="Text"
                                        value-name="Value"
                                        hint-name="Advice" />
                </nhs-fieldset-form-label>
                
                <nhs-submit-button text="Save and continue" />
            </form>
    </div>
</div>
