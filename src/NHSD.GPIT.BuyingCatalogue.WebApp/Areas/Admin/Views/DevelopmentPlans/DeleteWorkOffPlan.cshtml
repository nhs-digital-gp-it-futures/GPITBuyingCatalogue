@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Models.DevelopmentPlans.EditWorkOffPlanModel
@{ ViewBag.Title = $"Delete Work-Off Plan for {Model.SolutionName}?"; }

<partial name="Partials/_BackLink" model="Model" />
<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-validation-summary />
        <nhs-page-title title="@ViewBag.Title"
                        caption="@Model.SolutionName"
                        advice="Confirm you want to delete the Work-Off Plan for this Catalogue Solution." />
        <div class="nhsuk-grid-row">
            <div class="nhsuk-grid-column-two-thirds">
                <form method="post">
                    <div>
                        <nhs-submit-button text="Delete" />
                    </div>
                    <div>
                        <a href="@Model.BackLink">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
