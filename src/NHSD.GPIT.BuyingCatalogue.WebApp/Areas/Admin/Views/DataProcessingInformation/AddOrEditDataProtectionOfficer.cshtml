@model AddEditDataProtectionOfficerModel

@{
    ViewBag.Title = "Data Protection Officer details";
}

<partial name="Partials/_BackLink" model="@Model"/>

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-validation-summary />

        <nhs-page-title title="@ViewBag.Title"
                        caption="@Model.SolutionName"
                        advice="Provide information about your Data Protection Officer."/>

        <form method="post">
            <input type="hidden" asp-for="BackLink"/>
            <input type="hidden" asp-for="SolutionName"/>

            <nhs-input label-text="Name of Data Protection Officer" asp-for="Name"/>

            <nhs-input label-text="Email address of Data Protection Officer" asp-for="EmailAddress"/>

            <nhs-input label-text="Telephone number of Data Protection Officer" asp-for="PhoneNumber"/>

            <nhs-submit-button/>
        </form>
    </div>
</div>
