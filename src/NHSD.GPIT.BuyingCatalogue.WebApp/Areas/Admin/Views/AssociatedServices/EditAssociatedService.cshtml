@using NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Controllers;
@using NHSD.GPIT.BuyingCatalogue.Framework.Extensions;
@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Models.AssociatedServices.EditAssociatedServiceModel;
@{
    Layout = "~/Views/Shared/Layouts/_NoBannersLayout.cshtml";
    ViewBag.Title = $"{Model.AssociatedService.Name} information";
}
<partial name="Partials/_BackLink" model="Model" />
<div class="nhsuk-grid-row">    
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-page-title title="@ViewBag.Title"
                        caption="@Model.Solution.Name"
                        advice="Provide information about the Associated Service." />

        <nhs-table data-test-id="associated-service-dashboard-table">
            <nhs-table-column>Section</nhs-table-column>
            <nhs-table-column>Mandatory</nhs-table-column>
            <nhs-table-column>Status</nhs-table-column>
            <nhs-table-column></nhs-table-column>
            <nhs-table-row-container>
                <nhs-table-cell>Details</nhs-table-cell>
                <nhs-table-cell>Yes</nhs-table-cell>
                <nhs-table-cell><nhs-tag status-enum="@Model.DetailsStatus()" /></nhs-table-cell>
                <nhs-table-cell><a asp-action="@nameof(AssociatedServicesController.EditAssociatedServiceDetails)"
                   asp-controller="@typeof(AssociatedServicesController).ControllerName()"
                   asp-route-solutionId="@Model.Solution.Id"
                   asp-route-associatedServiceId="@Model.AssociatedService.Id"
                   style="white-space: nowrap;">
                    Edit
                </a></nhs-table-cell>
            </nhs-table-row-container>
            <nhs-table-row-container>
                <nhs-table-cell>Price</nhs-table-cell>
                <nhs-table-cell>Yes</nhs-table-cell>
                <nhs-table-cell><nhs-tag status-enum="@Model.ListPriceStatus()" /></nhs-table-cell>
                <nhs-table-cell><a asp-action="@nameof(AssociatedServicesController.ManageListPrices)"
                   asp-controller="@typeof(AssociatedServicesController).ControllerName()"
                   asp-route-solutionId="@Model.Solution.Id"
                   asp-route-associatedServiceId="@Model.AssociatedService.Id"
                   style="white-space: nowrap;">Edit</a></nhs-table-cell>
            </nhs-table-row-container>
        </nhs-table>

        <form method="post" asp-action="SetPublicationStatus" asp-route-solutionId="@Model.Solution.Id" asp-route-associatedServiceId="@Model.AssociatedService.Id" >
            <input type="hidden" asp-for="Solution" />
            <input type="hidden" asp-for="AssociatedService" />
            <input type="hidden" asp-for="BackLink" />
            <input type="hidden" asp-for="BackLinkText" />
            <nhs-fieldset-form-label asp-for="@Model"
                                     label-text="What would you like to do with this Associated Service?"
                                     label-hint="Select one option."
                                     size="Large">
                <nhs-radio-buttons asp-for="SelectedPublicationStatus"
                                   values="Model.PublicationStatuses.Cast<object>()"
                                   value-name="Value"
                                   display-name="Text" />
            </nhs-fieldset-form-label>

            <nhs-submit-button text="Continue" />
        </form>

        <vc:nhs-delete-button url="@Url.Action(
                                               nameof(AssociatedServicesController.DeleteAssociatedService),
                                               typeof(AssociatedServicesController).ControllerName(),
                                               new { SolutionId = Model.Solution.Id, AssociatedServiceId = Model.AssociatedService.Id })"
                              text="Delete Associated Service" />

    </div>
</div>
