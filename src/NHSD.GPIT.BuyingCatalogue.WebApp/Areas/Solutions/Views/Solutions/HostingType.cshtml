@using NHSD.GPIT.BuyingCatalogue.Framework.Extensions
@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Solutions.Models.HostingTypesModel;
<div>
    <partial name="_solutionSummary" model="Model" />
    <p>These are the ways this Catalogue Solution can be hosted:</p>

    @if (Model.PublicCloud.Status() == NHSD.GPIT.BuyingCatalogue.ServiceContracts.Enums.TaskProgress.Completed)
    {
        <nhs-card title="Public cloud">
            @if (!string.IsNullOrWhiteSpace(Model.PublicCloud.Summary))
            {
                <p>@Model.PublicCloud.Summary</p>
                <p>
                    <a href="@Model.PublicCloud.Link" target="_blank">Find out more information on how this Catalogue Solution is hosted (opens in a new tab)</a>
                </p>
            }

            @if (!string.IsNullOrWhiteSpace(Model.PublicCloud.RequiresHscn))
            {
                <p>
                    <b>@Model.PublicCloud.RequiresHscn</b>
                </p>
            }
        </nhs-card>
    }

    @if (Model.PrivateCloud.Status() == NHSD.GPIT.BuyingCatalogue.ServiceContracts.Enums.TaskProgress.Completed)
    {
        <nhs-card title="Private cloud">
            @if (!string.IsNullOrWhiteSpace(Model.PrivateCloud.Summary))
            {
                <p>@Model.PrivateCloud.Summary</p>
                <p>
                    <a href="@Model.PrivateCloud.Link" target="_blank">Find out more information on how this Catalogue Solution is hosted (opens in a new tab)</a>
                </p>
            }

            @if (!string.IsNullOrWhiteSpace(Model.PrivateCloud.HostingModel))
            {
                <h3>Data centre hosting model</h3>
                <p>@Model.PrivateCloud.HostingModel</p>
            }

            @if (!string.IsNullOrWhiteSpace(Model.PrivateCloud.RequiresHscn))
            {
                <p>
                    <b>@Model.PrivateCloud.RequiresHscn</b>
                </p>
            }
        </nhs-card>
    }

    @if (Model.HybridHostingType.Status() == NHSD.GPIT.BuyingCatalogue.ServiceContracts.Enums.TaskProgress.Completed)
    {
        <nhs-card title="Hybrid">
            @if (!string.IsNullOrWhiteSpace(Model.HybridHostingType.Summary))
            {
                <p>@Model.HybridHostingType.Summary</p>
                <p>
                    <a href="@Model.HybridHostingType.Link" target="_blank">Find out more information on how this Catalogue Solution is hosted (opens in a new tab)</a>
                </p>
            }

            @if (!string.IsNullOrWhiteSpace(Model.HybridHostingType.HostingModel))
            {
                <h3>Data centre hosting model</h3>
                <p>@Model.HybridHostingType.HostingModel</p>
            }

            @if (!string.IsNullOrWhiteSpace(Model.HybridHostingType.RequiresHscn))
            {
                <p>
                    <b>@Model.HybridHostingType.RequiresHscn</b>
                </p>
            }
        </nhs-card>
    }

    @if (Model.OnPremise.Status() == NHSD.GPIT.BuyingCatalogue.ServiceContracts.Enums.TaskProgress.Completed)
    {
        <nhs-card title="Premise">
            @if (!string.IsNullOrWhiteSpace(Model.OnPremise.Summary))
            {
                <p>@Model.OnPremise.Summary</p>
                <p>
                    <a href="@Model.OnPremise.Link" target="_blank">Find out more information on how this Catalogue Solution is hosted (opens in a new tab)</a>
                </p>
            }

            @if (!string.IsNullOrWhiteSpace(Model.OnPremise.HostingModel))
            {
                <h3>Data centre hosting model</h3>
                <p>@Model.OnPremise.HostingModel</p>
            }

            @if (!string.IsNullOrWhiteSpace(Model.OnPremise.RequiresHscn))
            {
                <p>
                    <b>@Model.OnPremise.RequiresHscn</b>
                </p>
            }
        </nhs-card>
    }
</div>
