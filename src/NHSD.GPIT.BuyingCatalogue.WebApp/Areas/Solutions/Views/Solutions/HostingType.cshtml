@using NHSD.GPIT.BuyingCatalogue.Framework.Extensions
@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Solutions.Models.HostingTypesModel;
<div>
    <p><strong>These are the ways this Catalogue Solution can be hosted:</strong></p>

    @if (Model.PublicCloud.Status() == NHSD.GPIT.BuyingCatalogue.ServiceContracts.Enums.TaskProgress.Completed)
    {
        <h2>Public cloud</h2>

        @if (!string.IsNullOrWhiteSpace(Model.PublicCloud.Summary))
        {
            <h3>Summary</h3>
            <p>@Model.PublicCloud.Summary</p>
            <p>
                <a href="@Model.PublicCloud.Link">@Model.PublicCloud.Link</a>
            </p>

        }

        @if (!string.IsNullOrWhiteSpace(Model.PublicCloud.RequiresHscn))
        {
