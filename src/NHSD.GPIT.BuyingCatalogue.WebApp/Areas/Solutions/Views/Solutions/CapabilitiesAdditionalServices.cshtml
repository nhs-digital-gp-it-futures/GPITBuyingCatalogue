@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Solutions.Models.CapabilitiesViewModel;
@{
    Layout = "~/Views/Shared/Layouts/_SolutionsLayoutNoNav.cshtml";
}

@section BackLink
{
    <vc:nhs-backlink text="Go back" url="@Url.Action("AdditionalServices", "SolutionDetails", new { id = Model.SolutionId })"></vc:nhs-backlink>
}


<div class="nhsuk-width-container">
    <main id="maincontent" role="main">
        <article>
            <div class="nhsuk-grid-row">
                <div class="nhsuk-grid-column-full">
                    <p>
                        @Model.Description
                    </p>
                    <partial name="_CapabilitiesList" model="Model" />
                </div>
            </div>
        </article>
    </main>
</div>
