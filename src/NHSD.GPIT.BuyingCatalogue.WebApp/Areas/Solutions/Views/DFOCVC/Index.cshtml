@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Solutions.Models.SolutionsModel;
@{
    ViewData["Title"] = "DFOCVC framework - results";
}

<div class="nhsuk-grid-row nhsuk-width-container" data-test-id="solutions-list-body">

    <div class="nhsuk-u-padding-top-5" data-test-id="go-back-link">
        <div class="nhsuk-back-link">
            <a class="nhsuk-back-link__link" href="~/">
                <svg class="nhsuk-icon nhsuk-icon__chevron-left" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M8.5 12c0-.3.1-.5.3-.7l5-5c.4-.4 1-.4 1.4 0s.4 1 0 1.4L10.9 12l4.3 4.3c.4.4.4 1 0 1.4s-1 .4-1.4 0l-5-5c-.2-.2-.3-.4-.3-.7z"></path>
                </svg>
                Go back
            </a>
        </div>
    </div>

    <div class="nhsuk-grid-row" data-test-id="general-description">
        <div class="nhsuk-grid-column-two-thirds">
            <h1 class="nhsuk-u-margin-top-3 nhsuk-u-margin-bottom-3">DFOCVC framework - results</h1>
            <p class="nhsuk-heading-l nhsuk-u-font-size-22">These are the online and video consultation Catalogue Solutions available on the DFOCVC framework.</p>
        </div>
    </div>

    <div data-test-id="solution-cards" class="nhsuk-u-margin-bottom-7 nhsuk-u-margin-top-7">

        @foreach (var solution in Model.Solutions)
        {
            <div class="nhsuk-u-padding-bottom-5 nhsuk-u-padding-top-7 bc-t-border-top--blue" data-test-id="solution-card">
                <div class="nhsuk-grid-row">
                    <div class="nhsuk-grid-column-two-thirds">

                        <h3 class="nhsuk-u-margin-bottom-2 nhsuk-u-font-size-32" data-test-id="solution-card-name">
                            <a href="~/Solutions/DFOCVC/@solution.CatalogueItemId">
                                @solution.Name
                            </a>
                        </h3>

                        <h4 class="nhsuk-u-margin-bottom-2 nhsuk-u-font-weight-bold nhsuk-u-font-size-22" data-test-id="solution-card-supplier">
                            @solution.Supplier.Name
                        </h4>

                        <p data-test-id="solution-card-summary" class="nhsuk-u-font-size-16">
                            @solution.Solution.Summary
                        </p>

                        <div data-test-id="solution-card-view-link" class="nhsuk-u-margin-top-5 nhsuk-u-margin-bottom-5">
                            <a href="~/Solutions/DFOCVC/@solution.CatalogueItemId">View this solution<span class="nhsuk-u-visually-hidden"> for DFOCVC Online Consultation</span></a>
                        </div>
                    </div>

                    <div class="nhsuk-grid-column-one-third" data-test-id="solution-card-capability-list">

                        <div data-test-id="capability-list">
                            <h5 class="nhsuk-u-font-size-22">Capabilities met</h5>
                            <ul>
                                @foreach (var capability in solution.Solution.SolutionCapabilities)
                                {
                                    <li data-test-id="capability-list-item" class="nhsuk-u-font-size-16">
                                        @capability.Capability.Name
                                    </li>
                                }
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        }

        <div class="bc-t-border-top--blue" />
    </div>
</div>



