@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Solutions.Models.SolutionSupplierDetailsModel;
@{
    Layout = "_Layout";
    ViewData["Title"] = $"Solution {Model.Section}";
}

<div class="nhsuk-width-container ">
    <main id="maincontent" role="main" class="nhsuk-grid-row">
        <article class="nhsuk-grid-column-two-thirds">
            <h2>About @Model.Name</h2>
            @if (!string.IsNullOrEmpty(Model.Summary))
            {
                @foreach (var paraphagh in @Model.Summary.Split("\n"))
                {
                    <p>
                        @paraphagh
                    </p>
                }
            }
            @if (!string.IsNullOrEmpty(Model.Url))
            {
                <p>
                    <a href="@Model.Url">@Model.Url</a>
                </p>
            }
            @if (Model.Contacts.Count > 0)
            {
                <h2>Contact details</h2>
                @foreach (var contact in Model.Contacts)
                {
                    <dl class="nhsuk-summary-list">
                        <div class="nhsuk-summary-list__row">
                            <dt class="nhsuk-summary-list__key">
                                Contact name
                            </dt>
                            <dd class="nhsuk-summary-list__value">
                                @contact.FullName
                            </dd>
                        </div>
                        <div class="nhsuk-summary-list__row">
                            <dt class="nhsuk-summary-list__key">
                                Contact details
                            </dt>
                            <dd class="nhsuk-summary-list__value">
                                @if (!string.IsNullOrEmpty(contact.PhoneNumber))
                                {
                                    <p>@contact.PhoneNumber</p>
                                }
                                <p>@contact.Email</p>
                            </dd>
                        </div>
                    </dl>
                }
            }
        </article>
    </main>
</div>
