@model NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Solutions.Models.ListPriceModel;
@{
    Layout = "_Layout";
}

<div class="nhsuk-width-container ">
    <main id="maincontent" role="main">
        <article>
            <div class="nhsuk-grid-row">
                <div class="nhsuk-grid-column-two-thirds">

                    <p><b>This Catalogue Solution is available at the following price:</b></p>

                    @if (Model.FlatListPrices.Count() > 0)
                    {
                        <nhs-table>
                            <nhs-table-column>Price</nhs-table-column>
                            <nhs-table-column>Unit</nhs-table-column>

                            @foreach (var item in Model.FlatListPrices)
                            {
                                <nhs-table-row-container>
                                    <nhs-table-cell>
                                        @item.CurrencyCode@item.Price
                                    </nhs-table-cell>
                                    <nhs-table-cell>
                                        @item.Unit
                                    </nhs-table-cell>

                                </nhs-table-row-container>
                            }
                        </nhs-table>
                    }

                    @if (Model.TierListPrices.Count() > 0)
                    {
                        <nhs-table  label-text="Tiered list price">
                            <nhs-table-column>Price</nhs-table-column>
                            <nhs-table-column>Unit</nhs-table-column>
                            <nhs-table-column>Volume</nhs-table-column>

                            @foreach (var item in Model.TierListPrices)
                            {
                                <nhs-table-row-container>
                                    <nhs-table-cell>
                                        @item.CurrencyCode@item.Price
                                    </nhs-table-cell>
                                    <nhs-table-cell>
                                        @item.Unit
                                    </nhs-table-cell>
                                    <nhs-table-cell>
                                        Volume
                                    </nhs-table-cell>
                                </nhs-table-row-container>
                            }
                        </nhs-table>
                    }

                </div>
            </div>
        </article>
    </main>
</div>
