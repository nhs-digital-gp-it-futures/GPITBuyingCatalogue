@{
    ViewData["Title"] = ViewData["BadUrl"];
}

<div class="nhsuk-width-container nhsuk-u-margin-top-4 nhsuk-u-margin-bottom-4 bc-c-error-container nhsuk-u-padding-4">
    <div data-test-id="error-back-link">
        <div class="nhsuk-back-link">
            <a class="nhsuk-back-link__link" href="~/">
                <svg class="nhsuk-icon nhsuk-icon__chevron-left" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M8.5 12c0-.3.1-.5.3-.7l5-5c.4-.4 1-.4 1.4 0s.4 1 0 1.4L10.9 12l4.3 4.3c.4.4.4 1 0 1.4s-1 .4-1.4 0l-5-5c-.2-.2-.3-.4-.3-.7z"></path>
                </svg>
                Go to Home Page
            </a>
        </div>
    </div>
    <h1 class="nhsuk-heading-l nhsuk-u-margin-top-5" data-test-id="error-title">@ViewData["BadUrl"]</h1>
    <p data-test-id="error-description">Please check it is valid and try again</p>
</div>
