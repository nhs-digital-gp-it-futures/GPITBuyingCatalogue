@using ValidationSummaryTagHelper = NHSD.GPIT.BuyingCatalogue.UI.Components.TagHelpers.ValidationSummaryTagHelper
@model NHSD.GPIT.BuyingCatalogue.WebApp.Models.Shared.ServiceRecipientModels.UploadOrSelectServiceRecipientModel;
<partial name="Partials/_BackLink" model="@Model" />
<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-validation-summary />
        <nhs-page-title model="@Model" />
        <form method="post">
            <input type="hidden" asp-for="BackLink" />
            <input type="hidden" asp-for="BackLinkText" />
            <input type="hidden" asp-for="@Model.SelectedServiceRecipient" />

            <nhs-fieldset-form-label asp-for="@Model"
                                     size="Medium">
                <nhs-radio-button-container>
                    @for (int i = 0; i < Model.ServiceRecipientOptions.Count();i++)
                    {
                        <nhs-radio-button asp-for="ShouldUploadRecipients"
                                          display-name="Text"
                                          value="Model.ServiceRecipientOptions.ElementAt(i)"
                                          value-name="Value" 
                                          index="i" />
                    }
                </nhs-radio-button-container>
            </nhs-fieldset-form-label>

            <div class="nhsuk-u-margin-top-9">
                <nhs-submit-button />
            </div>
        </form>
    </div>
</div>
