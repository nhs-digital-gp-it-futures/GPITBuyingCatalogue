@using NHSD.GPIT.BuyingCatalogue.Framework.Extensions
@model NHSD.GPIT.BuyingCatalogue.WebApp.Models.OrganisationModels.RemoveRelatedOrganisationModel
@{
    ViewBag.Title = "Remove organisation?";
}

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full">
        <partial name="Partials/_BackLink" model="Model" />

        <nhs-page-title title="@ViewBag.Title"
                        caption="@Model!.RelatedOrganisationName"
                        advice="@Model.OrganisationName will no longer be able to act on behalf of this organisation." />

        <form method="POST" action ="@Url.Action(
                                         nameof(OrganisationController.RemoveRelatedOrganisation),
                                         ViewContext.RouteData.Values["controller"].ToString())">
            <nhs-submit-button text="Remove organisation"/>
            @Html.AntiForgeryToken()
        </form>

        <a asp-controller=@ViewContext.RouteData.Values["controller"].ToString()
           asp-action="@nameof(OrganisationController.RelatedOrganisations)" 
           asp-route-organisationId="@Model.OrganisationId">Cancel</a>
    </div>
</div>
