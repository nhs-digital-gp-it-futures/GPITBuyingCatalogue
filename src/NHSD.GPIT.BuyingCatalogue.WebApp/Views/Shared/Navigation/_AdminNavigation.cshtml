@using NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Controllers;
@using NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Identity.Controllers
@using HomeController = NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Admin.Controllers.HomeController
@using NHSD.GPIT.BuyingCatalogue.UI.Components.Views.Shared.Components.NhsNavigationPanel
@{
    var navigationItems = new List<KeyValuePair<string, string>>()
    {
        new ("Home", Url.Action(nameof(HomeController.Index), typeof(HomeController).ControllerName(), new { area = "Admin" })),
        new ("Buyer organisations", Url.Action(nameof(OrganisationsController.Index), typeof(OrganisationsController).ControllerName())),
        new ("Supplier organisations", Url.Action(nameof(SuppliersController.Index), typeof(SuppliersController).ControllerName())),
        new ("Catalogue Solutions", Url.Action(nameof(CatalogueSolutionsController.Index), typeof(CatalogueSolutionsController).ControllerName())),
    };

    if (User.Identity?.IsAuthenticated ?? false)
        navigationItems.Add(new("Log out", Url.Action(nameof(AccountController.Logout), typeof(AccountController).ControllerName(), new { area = typeof(AccountController).AreaName() })));
}

<vc:nhs-navigation-panel title="Menu" items="navigationItems"></vc:nhs-navigation-panel>
