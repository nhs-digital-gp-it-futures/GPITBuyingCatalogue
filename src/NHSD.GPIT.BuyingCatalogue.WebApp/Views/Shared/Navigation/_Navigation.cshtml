@using NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Solutions.Controllers
@using NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Identity.Controllers
@using HomeController = NHSD.GPIT.BuyingCatalogue.WebApp.Controllers.HomeController
@{
    var navigationItems = new List<KeyValuePair<string, string>>()
    {
        new ("Home", Url.Action(nameof(HomeController.Index), typeof(HomeController).ControllerName())),
        new ("Catalogue Solutions", Url.Action(nameof(SolutionsController.Index), typeof(SolutionsController).ControllerName(), new { area = typeof(SolutionsController).AreaName() })),
        new ("Buyer Dashboard", Url.Action(nameof(BuyerDashboardController.Index), typeof(BuyerDashboardController).ControllerName())),
    };

    if (User.Identity?.IsAuthenticated ?? false)
        navigationItems.Add(new("Log out", Url.Action(nameof(AccountController.Logout), typeof(AccountController).ControllerName(), new { area = typeof(AccountController).AreaName() })));
}

<vc:nhs-navigation-panel title="Menu" items="navigationItems" ></vc:nhs-navigation-panel>
