@using NHSD.GPIT.BuyingCatalogue.WebApp.Areas.Identity.Controllers
@model string 
<header class="nhsuk-header nhsuk-header--organisation" role="banner">
    <div class="nhsuk-width-container nhsuk-header__container">
    <partial name="Headers/_HeaderContent" />
        <div class="nhsuk-header__content" id="content-header">
            <div class="nhsuk-header__menu">
                <button class="nhsuk-header__menu-toggle" id="toggle-menu" aria-controls="header-navigation" aria-expanded="false">Menu</button>
            </div>
            <div class="nhsuk-account__login">
            @if (User.Identity.IsAuthenticated)
            {
                <a class="nhsuk-account__login--link"
                   data-test-id="logout-link"
                   asp-area="@typeof(AccountController).AreaName()"
                   asp-controller="@typeof(AccountController).ControllerName()"
                   asp-action="@nameof(AccountController.Logout)">
                    Log out
                    <svg class="nhsuk-account__login--icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" height="26" width="26">
                        <path d="M16,18.2c-3.1,0-5.7-2.5-5.7-5.7s2.5-5.7,5.7-5.7c3.1,0,5.7,2.5,5.7,5.7 C21.7,15.7,19.1,18.2,16,18.2"></path>
                        <path d="M16,0C7.2,0,0,7.2,0,16s7.2,16,16,16s16-7.2,16-16C32,7.2,24.8,0,16,0 M24.1,27.5V26 c0-3.5-2.5-6.3-5.7-6.3h-4.8C10.5,19.6,8,22.5,8,26v1.6C1.6,23.1,0,14.3,4.5,8S17.7,0,24,4.5S32,17.7,27.5,24 C26.6,25.4,25.4,26.6,24.1,27.5"></path>
                    </svg>
                </a>
            }
            else
            {
                    <a class="nhsuk-account__login--link"
                       asp-area="@typeof(AccountController).AreaName()"
                       asp-action="@nameof(AccountController.Login)"
                       asp-controller="@typeof(AccountController).ControllerName()">
                        Log in
                        <svg class="nhsuk-account__login--icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" height="26" width="26">
                            <path d="M16,18.2c-3.1,0-5.7-2.5-5.7-5.7s2.5-5.7,5.7-5.7c3.1,0,5.7,2.5,5.7,5.7 C21.7,15.7,19.1,18.2,16,18.2"></path>
                            <path d="M16,0C7.2,0,0,7.2,0,16s7.2,16,16,16s16-7.2,16-16C32,7.2,24.8,0,16,0 M24.1,27.5V26 c0-3.5-2.5-6.3-5.7-6.3h-4.8C10.5,19.6,8,22.5,8,26v1.6C1.6,23.1,0,14.3,4.5,8S17.7,0,24,4.5S32,17.7,27.5,24 C26.6,25.4,25.4,26.6,24.1,27.5"></path>
                        </svg>
                    </a>
            }
            </div>
        </div>
    </div>
    <partial name="@($"Navigation/{Model}")" />    
</header>
