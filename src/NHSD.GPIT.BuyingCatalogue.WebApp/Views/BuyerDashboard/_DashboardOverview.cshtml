@using NHSD.GPIT.BuyingCatalogue.UI.Components.Models
@model NHSD.GPIT.BuyingCatalogue.WebApp.Models.Home.DashboardCardModel

<li class="@Model.ColumnWidth.ToClass() nhsuk-card-group__item">
    <nhs-card-v2>
        <nhs-card-content>
            <h3 class="nhsuk-card__heading @(Model.HeadingSize.ToHeading())">
                @Model.Title
                <span class="nhsuk-caption-m nhsuk-caption--bottom">
                    @Model.Text
                </span>
            </h3>
            <p class="nhsuk-body">
                <a class="nhsuk-link nhsuk-link--no-visited-state" href="@Model.Url">@Model.LinkText</a>
            </p>
        </nhs-card-content>
    </nhs-card-v2>
</li>
