@model NHSD.GPIT.BuyingCatalogue.WebApp.Models.NavBaseModel
@{
    ViewBag.Title = "Nomination submitted";
}

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <nhs-page-title title="@ViewBag.Title"
                        advice="Your nomination has been sent to the Buying Catalogue Team." />
        <div data-test-id="nomination-confirmation-details">
            <h3>What next?</h3>
            <p>
                We'll email you once buyers from the organisation you've nominated are able to act on your behalf.
            </p>
            <p>
                The Buying Catalogue Team aims to respond to nomination requests within 5 working days.
            </p>
        </div>
        <vc:nhs-secondary-button text="Return to buyer dashboard"
                                 url="@Model.BackLink"
                                 type="Primary" />
    </div>
</div>
