@using NHSD.GPIT.BuyingCatalogue.EntityFramework.Ordering.Models
@using NHSD.GPIT.BuyingCatalogue.Framework.Calculations
@model NHSD.GPIT.BuyingCatalogue.WebApp.Models.OrderSummaryModel
@{
	Layout = "";
}

<!DOCTYPE html>
