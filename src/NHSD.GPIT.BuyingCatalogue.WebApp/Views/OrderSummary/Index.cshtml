    <style>
        @@media print {
            @@page {
                size: A4 landscape;
                max-height:100%;
                max-width:100%
            }
        }

        .nhsuk-table-responsive th {
            font-size: 1em;
            white-space: normal;
        }

        .nhsuk-table-responsive td {
            font-size: 1em;
        }

        h3 {
            border-bottom: 1px solid lightgray;
            width: 100%;
        }

        .pdf-container {
            -webkit-break-inside: avoid;
            break-inside: avoid;
        }

        table {
            -webkit-break-inside: auto;
            break-inside: auto;
        }

        td, thead th {
            border: 0;
            padding-top: 4px;
            padding-right: 12px;
            padding-bottom: 0;
        }

        th {
            white-space: nowrap;
        }

        tr {
            -ms-break-after: auto;
            -webkit-break-after: auto;
            -webkit-break-inside: avoid;
            break-after: auto;
            break-inside: avoid;
        }

        tbody tr:nth-child(even) {
            background-color: #F8F8F8;
        }

        tbody tr.totals {
            background-color: #FFFFFF;
        }

        td:last-child {
            padding-right: 0;
        }

        .total {
            border-top: 1px solid lightgray;
            font-weight: 600;
        }

        .numeric {
            text-align: right;
        }

        .pdf-summary-list {
            -webkit-break-inside: avoid;
            break-inside: avoid;
            display: table;
            font-size: 1.1875rem;
            font-weight: 400;
            line-height: 1.47368;
            margin-bottom: 40px;
            table-layout: fixed;
            vertical-align: top;
            width: 100%;
        }

        .pdf-summary-list-row {
            display: table-row;
            margin-bottom: 32px;
        }

        .pdf-summary-list-row div {
            display: table-cell;
            padding-top: 0;
            padding-right: 24px;
            padding-bottom: 0;
