@model NHSD.GPIT.BuyingCatalogue.UI.Components.Views.Shared.Components.Autocomplete.NhsAutocompleteModel;
@{
    var ignoredQueryStrings = new[]
            { 
                Model.QueryParameterName,
                "searchTermType",
                "page"
            };
}

<div id="@(Model.Id + "-form-input-wrap-search")" class="autocomplete-wrap-search">
    <label id="@(Model.Id + "-form-input-label")" for="@(Model.Id + "-form-input")">@Model.TitleText</label>
    <form class="autocomplete-wrap-form" id="@(Model.Id + "-search-form")" action="@(Model.CurrentPageUrl)" method="get" role="search">
        <div class="autocomplete-container" style="display:none;">
            <label class="nhsuk-u-visually-hidden" for="@Model.Id">@Model.TitleText</label>
            <div id="@(Model.Id + "-container")"></div>
        </div>
        <input class="nhsuk-search__input" id="@(Model.Id + "-form-input")" name="@Model.QueryParameterName" type="search" autocomplete="off" value="@Model.SearchText">
        @foreach(var queryParam in Context.Request.Query.Where(q => !ignoredQueryStrings.Contains(q.Key)))
        {
            <input type="hidden" name="@queryParam.Key" value="@queryParam.Value">
        }
        <button class="autocomplete-search__submit" type="submit">
            <svg class="nhsuk-icon nhsuk-icon__search" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true" focusable="false" width="27" height="27">
                <path d="M19.71 18.29l-4.11-4.1a7 7 0 1 0-1.41 1.41l4.1 4.11a1 1 0 0 0 1.42 0 1 1 0 0 0 0-1.42zM5 10a5 5 0 1 1 5 5 5 5 0 0 1-5-5z"></path>
            </svg>
            <span class="nhsuk-u-visually-hidden">Search</span>
        </button>
    </form>
</div>

<script type="text/javascript" src="@Url.Content("~/js/accessible-autocomplete/accessible-autocomplete.min.js")" asp-append-version="true"></script>
<script type="text/javascript" src="@Url.Content("~/js/accessible-autocomplete/autocompleteConfig.min.js")" asp-append-version="true"></script>		
<script type="text/javascript">
    new autocompleteConfig('@Model.Id','@Model.AjaxUrl','@Model.QueryParameterName','@Model.TitleText','@Model.CurrentPageUrl').Implement();
</script>
