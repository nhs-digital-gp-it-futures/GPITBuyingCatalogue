@model NHSD.GPIT.BuyingCatalogue.UI.Components.Views.Shared.Components.NhsCareCard.NhsCareCardModel

<div class="nhsuk-care-card @Model.CareCardClass">
    <div class="nhsuk-care-card__heading-container">
        <h3 class="nhsuk-care-card__heading">
            <span role="text">
                <span class="nhsuk-u-visually-hidden">Non-urgent advice: </span>
                @Model.Title
            </span>
        </h3>
        <span class="nhsuk-care-card__arrow" aria-hidden="true"></span>
    </div>
    <div class="nhsuk-care-card__content">
        <ul>
            @foreach (string option in Model.ListOptions)
            {
                <li>@option</li>
            }
        </ul>
        <p>@Model.Footer</p>
    </div>
</div>
